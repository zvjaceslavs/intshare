  <groups>
    <group>
      <name>VOIP ALL</name>
    </group>
  </groups>
  <templates>
    <template>
      <template>Cisco AXL DataBase Replication status</template>
      <name>Cisco AXL DataBase Replication status</name>
      <groups>
        <group>
          <name>VOIP ALL</name>
        </group>
      </groups>
      <applications>
        <application>
          <name>CUCM DataBase replication</name>
        </application>
      </applications>
      <items>
        <item>
          <name>DB Replication State</name>
          <type>DEPENDENT</type>
          <key>dbrepstate</key>
          <delay>0</delay>
          <history>7d</history>
          <trends>0</trends>
          <applications>
            <application>
              <name>CUCM DataBase replication</name>
            </application>
          </applications>
          <valuemap>
            <name>CUCM Replications Status</name>
          </valuemap>
          <preprocessing>
            <step>
              <type>XMLPATH</type>
              <params>number(//item[2]/Value)</params>
            </step>
          </preprocessing>
          <master_item>
            <key>ucdbreplication</key>
          </master_item>
          <triggers>
            <trigger>
              <expression>{last()}&lt;>2</expression>
              <name>DB replication fail !!!</name>
              <priority>DISASTER</priority>
            </trigger>
          </triggers>
        </item>
        <item>
          <name>API PerfmonRequet State of Replication</name>
          <type>HTTP_AGENT</type>
          <key>ucdbreplication</key>
          <delay>30s</delay>
          <history>0</history>
          <trends>0</trends>
          <value_type>TEXT</value_type>
          <authtype>BASIC</authtype>
          <username>{$ZABBIX_APIUSER_UC}</username>
          <password>{$ZABBIX_APIPASS_UC}</password>
          <applications>
            <application>
              <name>CUCM DataBase replication</name>
            </application>
          </applications>
          <preprocessing>
            <step>
              <type>JAVASCRIPT</type>
              <params>value = String(value) value = value.replace(/>&lt;/g,">\n&lt;"); return value</params>
            </step>
          </preprocessing>
          <url>https://{HOST.IP}:8443/perfmonservice/services/PerfmonPort?wsdl</url>
          <posts>&lt;soapenv:Envelope xmlns:soapenv="http://schemas.xmlsoap.org/soap/envelope/" xmlns:soap="http://schemas.cisco.com/ast/soap"> &lt;soapenv:Header/> &lt;soapenv:Body> &lt;perfmonCollectCounterData> &lt;host>{HOST.DNS}&lt;/host> &lt;Object>Number of Replicates Created and State of Replication&lt;/Object> &lt;/perfmonCollectCounterData> &lt;/soapenv:Body> &lt;/soapenv:Envelope></posts>
          <post_type>XML</post_type>
          <headers>
            <header>
              <name>SOAPAction</name>
              <value>"http://schemas.cisco.com/ast/soap/action/#PerfmonPort#PerfmonOpenSession"</value>
            </header>
          </headers>
          <request_method>POST</request_method>
        </item>
      </items>
    </template>
  </templates>
  <value_maps>
