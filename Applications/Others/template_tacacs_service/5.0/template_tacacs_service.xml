<?xml version="1.0" encoding="UTF-8"?>
<zabbix_export>
  <version>5.0</version>
  <date>2021-11-09T08:05:34Z</date>
  <groups>
    <group>
      <name>Templates</name>
    </group>
  </groups>
  <templates>
    <template>
      <template>App TACACS Service</template>
      <name>App TACACS Service</name>
      <description>## Overview Simple TCP Check of TACACS Service running in TCP Port 49. Includes: * Item * Trigger * Graph Created with Zabbix 3.0, but it can be ported to versions 2.2 and 2.4 ## Author Jose Rosa</description>
      <groups>
        <group>
          <name>Templates</name>
        </group>
      </groups>
      <applications>
        <application>
          <name>TACACS Service</name>
        </application>
      </applications>
      <items>
        <item>
          <name>TACACS service is running</name>
          <type>SIMPLE</type>
          <key>net.tcp.service[tcp,,49]</key>
          <delay>60</delay>
          <history>1d</history>
          <applications>
            <application>
              <name>TACACS Service</name>
            </application>
          </applications>
          <valuemap>
            <name>Service state</name>
          </valuemap>
          <triggers>
            <trigger>
              <expression>{max(#3)}=0</expression>
              <name>TACACS service is down on {HOST.NAME}</name>
              <priority>INFO</priority>
            </trigger>
          </triggers>
        </item>
      </items>
    </template>
  </templates>
  <graphs>
    <graph>
      <name>TACACS Service Statistics</name>
      <graph_items>
        <graph_item>
          <color>1A7C11</color>
          <item>
            <host>App TACACS Service</host>
            <key>net.tcp.service[tcp,,49]</key>
          </item>
        </graph_item>
      </graph_items>
    </graph>
  </graphs>
  <value_maps>
    <value_map>
      <name>Service state</name>
      <mappings>
        <mapping>
          <value>0</value>
          <newvalue>Down</newvalue>
        </mapping>
        <mapping>
          <value>1</value>
          <newvalue>Up</newvalue>
        </mapping>
      </mappings>
    </value_map>
  </value_maps>
</zabbix_export>