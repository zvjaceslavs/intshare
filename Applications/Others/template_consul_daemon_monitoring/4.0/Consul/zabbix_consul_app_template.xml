<?xml version="1.0" encoding="UTF-8"?>
<zabbix_export>
    <version>4.4</version>
    <date>2020-07-30T14:44:20Z</date>
    <groups>
        <group>
            <name>Templates/Applications</name>
        </group>
    </groups>
    <templates>
        <template>
            <template>Template App Consul</template>
            <name>Template App Consul</name>
            <description>Check If consul daemon is running</description>
            <groups>
                <group>
                    <name>Templates/Applications</name>
                </group>
            </groups>
            <applications>
                <application>
                    <name>Consul</name>
                </application>
            </applications>
            <items>
                <item>
                    <name>Consul nodes registered</name>
                    <key>consul.nodes[registered]</key>
                    <applications>
                        <application>
                            <name>Consul</name>
                        </application>
                    </applications>
                </item>
                <item>
                    <name>Consul memory used</name>
                    <key>proc.mem[consul]</key>
                    <value_type>FLOAT</value_type>
                    <units>b</units>
                    <applications>
                        <application>
                            <name>Consul</name>
                        </application>
                    </applications>
                </item>
                <item>
                    <name>Consul daemon status</name>
                    <key>proc.num[consul]</key>
                    <applications>
                        <application>
                            <name>Consul</name>
                        </application>
                    </applications>
                    <triggers>
                        <trigger>
                            <expression>{last()}&lt;1</expression>
                            <name>Consul is not running on {HOST.NAME}</name>
                            <priority>HIGH</priority>
                        </trigger>
                    </triggers>
                </item>
            </items>
        </template>
    </templates>
    <graphs>
        <graph>
            <name>Consul memory</name>
            <graph_items>
                <graph_item>
                    <color>199C0D</color>
                    <item>
                        <host>Template App Consul</host>
                        <key>proc.mem[consul]</key>
