<?xml version="1.0" encoding="UTF-8"?>
<zabbix_export>
  <version>5.0</version>
  <date>2021-10-22T10:09:25Z</date>
  <groups>
    <group>
      <name>VPN Server</name>
    </group>
  </groups>
  <templates>
    <template>
      <template>Template OpenVPN</template>
      <name>Template OpenVPN</name>
      <description>Template to monitor VPN Services according to the Open Source configuration provided at https://thevpncompany.com.au The VPN Company provides the source code to create an end-to-end VPN Company.</description>
      <groups>
        <group>
          <name>VPN Server</name>
        </group>
      </groups>
      <applications>
        <application>
          <name>OpenVPN</name>
        </application>
      </applications>
      <discovery_rules>
        <discovery_rule>
          <name>Discover Connected Users</name>
          <key>thevpncompany.openvpn.client.discovery</key>
          <description>Discover the users that are connected to an OpenVPN Server</description>
          <item_prototypes>
            <item_prototype>
              <name>Data for {#ID}</name>
              <key>thevpncompany.openvpn.client.if.size[{#ID}]</key>
              <delay>30s</delay>
              <units>B</units>
              <applications>
                <application>
                  <name>OpenVPN</name>
                </application>
              </applications>
            </item_prototype>
          </item_prototypes>
        </discovery_rule>
      </discovery_rules>
    </template>
    <template>
      <template>Template VPN Server</template>
      <name>Template VPN Server</name>
      <description>Template to monitor VPN Services according to the Open Source configuration provided at https://thevpncompany.com.au The VPN Company provides the source code to create an end-to-end VPN Company.</description>
      <groups>
        <group>
          <name>VPN Server</name>
        </group>
      </groups>
      <applications>
        <application>
          <name>Networking</name>
        </application>
      </applications>
      <items>
        <item>
          <name>Total Network Usage</name>
          <key>vpncompany.if.size</key>
          <history>45d</history>
          <units>B</units>
          <applications>
            <application>
              <name>Networking</name>
            </application>
          </applications>
        </item>
      </items>
    </template>
  </templates>
</zabbix_export>