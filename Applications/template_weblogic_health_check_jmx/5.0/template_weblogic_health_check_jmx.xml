  <templates>
    <template>
      <template>WeblogicHealth</template>
      <name>WeblogicHealth</name>
      <description>## Overview ##### Weblogic monitoring using JMX ##### &lt;https://sath.com/weblogic-monitoring-zabbix-jmx/> ## Author Argha Chatterjee</description>
      <groups>
        <group>
          <name>Templates/Applications</name>
        </group>
      </groups>
      <applications>
        <application>
          <name>server health</name>
        </application>
      </applications>
      <items>
        <item>
          <name>OIMSERVER1</name>
          <type>JMX</type>
          <key>jmx["com.bea:Name=oim_server1,Type=ServerRuntime","State"]</key>
          <delay>30s</delay>
          <trends>0</trends>
          <value_type>TEXT</value_type>
          <applications>
            <application>
              <name>server health</name>
            </application>
          </applications>
          <jmx_endpoint>service:jmx:rmi:///jndi/rmi://{HOST.CONN}:{HOST.PORT}/jmxrmi</jmx_endpoint>
          <triggers>
            <trigger>
              <expression>{str(RUNNING,#1)}=0</expression>
              <name>OIM SERVER 1 Trigger</name>
              <priority>DISASTER</priority>
            </trigger>
          </triggers>
        </item>
