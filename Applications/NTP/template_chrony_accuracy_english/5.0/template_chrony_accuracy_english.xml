          <type>DEPENDENT</type>
          <key>Systemtime</key>
          <delay>0</delay>
          <trends>0</trends>
          <value_type>CHAR</value_type>
          <description>Displays the direction of the difference between NTP time and system time.</description>
          <applications>
            <application>
              <name>chrony</name>
            </application>
          </applications>
          <preprocessing>
            <step>
              <type>REGEX</type>
              <params>System time : (.*) \1</params>
            </step>
            <step>
              <type>REGEX</type>
              <params>(fast|slow) \0</params>
            </step>
          </preprocessing>
          <master_item>
            <key>system.run[chronyc tracking]</key>
          </master_item>
          <request_method>POST</request_method>
        </item>
        <item>
          <name>NTP time difference (ms)</name>
          <type>DEPENDENT</type>
          <key>Systemtime_ms</key>
          <delay>0</delay>
          <value_type>FLOAT</value_type>
          <units>ms</units>
          <description>Displays the difference between NTP time and system time.</description>
          <applications>
            <application>
              <name>chrony</name>
