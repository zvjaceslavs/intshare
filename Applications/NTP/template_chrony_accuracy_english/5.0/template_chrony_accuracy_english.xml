  <templates>
    <template>
      <template>chrony_Monitoring</template>
      <name>chrony</name>
      <groups>
        <group>
          <name>HomeRackUserGroupTemplates</name>
        </group>
      </groups>
      <applications>
        <application>
          <name>chrony</name>
        </application>
      </applications>
      <items>
        <item>
          <name>NTP offset</name>
          <type>DEPENDENT</type>
          <key>Lastoffset</key>
          <delay>0</delay>
          <value_type>FLOAT</value_type>
          <units>ms</units>
          <description>Time deviation between the NTP server</description>
          <applications>
            <application>
              <name>chrony</name>
            </application>
          </applications>
          <preprocessing>
            <step>
              <type>REGEX</type>
              <params>Last offset : (.*) \1</params>
            </step>
            <step>
              <type>RTRIM</type>
              <params>seconds</params>
            </step>
            <step>
              <type>MULTIPLIER</type>
              <params>1000</params>
            </step>
          </preprocessing>
          <master_item>
            <key>system.run[chronyc tracking]</key>
          </master_item>
          <request_method>POST</request_method>
          <triggers>
            <trigger>
              <expression>{last()}>{$NTP_OFFSET_LARGE} or {last()}&lt;-{$NTP_OFFSET_LARGE}</expression>
              <name>Misalignment of the upper NTP has exceeded the {$NTP_OFFSET_LARGE}ms</name>
              <priority>WARNING</priority>
            </trigger>
            <trigger>
              <expression>{last()}>{$NTP_OFFSET_SMALL} or {last()}&lt;-{$NTP_OFFSET_SMALL}</expression>
              <name>Misalignment of the upper NTP has exceeded the {$NTP_OFFSET_SMALL}ms</name>
              <priority>INFO</priority>
              <dependencies>
                <dependency>
                  <name>Misalignment of the upper NTP has exceeded the {$NTP_OFFSET_LARGE}ms</name>
                  <expression>{chrony_Monitoring:Lastoffset.last()}>{$NTP_OFFSET_LARGE} or {chrony_Monitoring:Lastoffset.last()}&lt;-{$NTP_OFFSET_LARGE}</expression>
                </dependency>
              </dependencies>
            </trigger>
          </triggers>
        </item>
        <item>
          <name>Leap status</name>
          <type>DEPENDENT</type>
          <key>LeapStatus</key>
          <delay>0</delay>
          <trends>0</trends>
          <value_type>CHAR</value_type>
          <description>Leap status Normal Insert second Delete second Not synchronized</description>
          <applications>
            <application>
              <name>chrony</name>
            </application>
          </applications>
          <preprocessing>
            <step>
              <type>REGEX</type>
              <params>Leap status :(.*) \1</params>
            </step>
          </preprocessing>
          <master_item>
            <key>system.run[chronyc tracking]</key>
          </master_item>
          <request_method>POST</request_method>
          <triggers>
            <trigger>
              <expression>(({regexp(Not synchronized)})&lt;>0)</expression>
              <name>Not synchronized with the NTP server.</name>
              <priority>WARNING</priority>
              <type>MULTIPLE</type>
            </trigger>
          </triggers>
        </item>
        <item>
          <name>NTP synchronized server</name>
          <type>DEPENDENT</type>
          <key>Reference</key>
          <delay>0</delay>
          <trends>0</trends>
          <value_type>CHAR</value_type>
          <applications>
            <application>
              <name>chrony</name>
            </application>
          </applications>
          <preprocessing>
            <step>
              <type>REGEX</type>
              <params>Reference ID : (.*) \1</params>
            </step>
            <step>
              <type>LTRIM</type>
              <params>Reference ID :</params>
            </step>
          </preprocessing>
          <master_item>
            <key>system.run[chronyc tracking]</key>
          </master_item>
          <request_method>POST</request_method>
        </item>
        <item>
          <name>NTP offset (long term average)</name>
          <type>DEPENDENT</type>
          <key>RMSoffset</key>
          <delay>0</delay>
          <value_type>FLOAT</value_type>
          <units>ms</units>
          <description>Time deviation between the NTP server (long term average)</description>
