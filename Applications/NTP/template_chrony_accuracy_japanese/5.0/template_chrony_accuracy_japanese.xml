<?xml version="1.0" encoding="UTF-8"?>
<zabbix_export>
  <version>5.0</version>
  <date>2021-10-19T21:21:21Z</date>
  <groups>
    <group>
      <name>自宅ラックテンプレート</name>
    </group>
  </groups>
  <templates>
    <template>
      <template>chrony_Monitoring-Japanese</template>
      <name>chronyテンプレート</name>
      <groups>
        <group>
          <name>自宅ラックテンプレート</name>
        </group>
      </groups>
      <applications>
        <application>
          <name>chrony</name>
        </application>
      </applications>
      <items>
        <item>
          <name>NTPオフセット</name>
          <type>DEPENDENT</type>
          <key>Lastoffset</key>
          <delay>0</delay>
          <value_type>FLOAT</value_type>
          <units>ms</units>
          <description>NTPサーバとの時刻ズレ</description>
          <applications>
            <application>
              <name>chrony</name>
            </application>
          </applications>
          <preprocessing>
            <step>
              <type>REGEX</type>
              <params>Last offset : (.*) \1</params>
            </step>
            <step>
              <type>RTRIM</type>
              <params>seconds</params>
            </step>
            <step>
              <type>MULTIPLIER</type>
              <params>1000</params>
            </step>
          </preprocessing>
          <master_item>
            <key>system.run[chronyc tracking]</key>
          </master_item>
          <triggers>
            <trigger>
              <expression>{last()}>{$NTP_OFFSET_LARGE} or {last()}&lt;-{$NTP_OFFSET_LARGE}</expression>
              <name>上位NTPとのずれが{$NTP_OFFSET_LARGE}msを超えました</name>
              <priority>WARNING</priority>
            </trigger>
            <trigger>
              <expression>{last()}>{$NTP_OFFSET_SMALL} or {last()}&lt;-{$NTP_OFFSET_SMALL}</expression>
              <name>上位NTPとのずれが{$NTP_OFFSET_SMALL}msを超えました</name>
              <priority>INFO</priority>
              <dependencies>
                <dependency>
                  <name>上位NTPとのずれが{$NTP_OFFSET_LARGE}msを超えました</name>
                  <expression>{chrony_Monitoring-Japanese:Lastoffset.last()}>{$NTP_OFFSET_LARGE} or {chrony_Monitoring-Japanese:Lastoffset.last()}&lt;-{$NTP_OFFSET_LARGE}</expression>
                </dependency>
              </dependencies>
            </trigger>
          </triggers>
        </item>
        <item>
          <name>同期状態</name>
          <type>DEPENDENT</type>
          <key>LeapStatus</key>
          <delay>0</delay>
          <trends>0</trends>
          <value_type>CHAR</value_type>
          <description>同期状態 Normal 正常 Insert second 挿入 Delete second 削除 Not synchronized 同期していない</description>
          <applications>
            <application>
              <name>chrony</name>
            </application>
          </applications>
          <preprocessing>
            <step>
              <type>REGEX</type>
              <params>Leap status :(.*) \1</params>
            </step>
          </preprocessing>
          <master_item>
            <key>system.run[chronyc tracking]</key>
          </master_item>
          <triggers>
            <trigger>
              <expression>{regexp(Not synchronized)}&lt;>0</expression>
              <name>NTPサーバーと同期していません。</name>
              <priority>WARNING</priority>
              <type>MULTIPLE</type>
            </trigger>
          </triggers>
        </item>
        <item>
          <name>NTP同期サーバ</name>
          <type>DEPENDENT</type>
          <key>Reference</key>
          <delay>0</delay>
          <trends>0</trends>
          <value_type>CHAR</value_type>
          <applications>
            <application>
              <name>chrony</name>
            </application>
          </applications>
          <preprocessing>
            <step>
              <type>REGEX</type>
              <params>Reference ID : (.*) \1</params>
            </step>
            <step>
              <type>LTRIM</type>
              <params>Reference ID :</params>
            </step>
          </preprocessing>
          <master_item>
            <key>system.run[chronyc tracking]</key>
          </master_item>
        </item>
        <item>
          <name>NTPオフセット(長期平均)</name>
          <type>DEPENDENT</type>
          <key>RMSoffset</key>
          <delay>0</delay>
          <value_type>FLOAT</value_type>
          <units>ms</units>
          <description>NTPサーバとの時刻ズレ</description>
          <applications>
            <application>
              <name>chrony</name>
            </application>
          </applications>
          <preprocessing>
            <step>
              <type>REGEX</type>
              <params>RMS offset :(.*) \1</params>
            </step>
            <step>
              <type>RTRIM</type>
              <params>seconds</params>
            </step>
            <step>
              <type>MULTIPLIER</type>
              <params>1000</params>
            </step>
          </preprocessing>
          <master_item>
            <key>system.run[chronyc tracking]</key>
          </master_item>
        </item>
        <item>
          <name>ネットワーク合計遅延</name>
          <type>DEPENDENT</type>
          <key>Rootdelay</key>
          <delay>0</delay>
          <value_type>FLOAT</value_type>
          <units>ms</units>
          <description>stratum-1 までのネットワーク合計遅延です。</description>
          <applications>
            <application>
              <name>chrony</name>
            </application>
          </applications>
          <preprocessing>
            <step>
              <type>REGEX</type>
              <params>Root delay :(.*) \1</params>
            </step>
            <step>
              <type>RTRIM</type>
              <params>seconds</params>
            </step>
            <step>
              <type>MULTIPLIER</type>
              <params>1000</params>
            </step>
          </preprocessing>
          <master_item>
            <key>system.run[chronyc tracking]</key>
          </master_item>
        </item>
        <item>
          <name>NTP階層</name>
          <type>DEPENDENT</type>
          <key>Stratum</key>
          <delay>0</delay>
          <description>監視対象サーバーのstratum階層</description>
          <applications>
            <application>
              <name>chrony</name>
            </application>
          </applications>
          <preprocessing>
            <step>
              <type>REGEX</type>
              <params>Stratum : (.*) \1</params>
            </step>
          </preprocessing>
          <master_item>
            <key>system.run[chronyc tracking]</key>
          </master_item>
        </item>
        <item>
          <name>chronyバージョン</name>
          <type>ZABBIX_ACTIVE</type>
          <key>system.run[chronyc -v]</key>
          <delay>1h</delay>
          <trends>0</trends>
          <value_type>CHAR</value_type>
          <applications>
            <application>
              <name>chrony</name>
            </application>
          </applications>
          <request_method>POST</request_method>
        </item>
        <item>
          <name>chronyc sources</name>
          <type>ZABBIX_ACTIVE</type>
          <key>system.run[chronyc sources]</key>
          <delay>10m</delay>
          <history>60d</history>
          <trends>0</trends>
          <value_type>TEXT</value_type>
          <applications>
            <application>
              <name>chrony</name>
            </application>
          </applications>
          <request_method>POST</request_method>
        </item>
        <item>
          <name>chronyReach</name>
          <type>ZABBIX_ACTIVE</type>
          <key>system.run[chronyc sources|grep \* |awk '{print$5}']</key>
          <delay>10m</delay>
          <description>過去8回の問合せ成功回数を8ビットで表現します。</description>
          <applications>
            <application>
              <name>chrony</name>
            </application>
          </applications>
          <preprocessing>
            <step>
              <type>OCTAL_TO_DECIMAL</type>
              <params></params>
            </step>
          </preprocessing>
          <request_method>POST</request_method>
        </item>
        <item>
          <name>chronyc tracking</name>
          <type>ZABBIX_ACTIVE</type>
          <key>system.run[chronyc tracking]</key>
          <delay>10m</delay>
          <history>60d</history>
          <trends>0</trends>
          <value_type>TEXT</value_type>
          <applications>
            <application>
              <name>chrony</name>
            </application>
          </applications>
          <request_method>POST</request_method>
        </item>
        <item>
          <name>NTP時刻差(方向)</name>
          <type>DEPENDENT</type>
          <key>Systemtime</key>
          <delay>0</delay>
          <trends>0</trends>
          <value_type>CHAR</value_type>
          <description>NTP時刻とsystem時刻との差の方向を示します。</description>
          <applications>
            <application>
              <name>chrony</name>
            </application>
          </applications>
          <preprocessing>
            <step>
              <type>REGEX</type>
              <params>System time : (.*) \1</params>
            </step>
            <step>
              <type>REGEX</type>
              <params>(fast|slow) \0</params>
            </step>
          </preprocessing>
          <master_item>
            <key>system.run[chronyc tracking]</key>
          </master_item>
        </item>
        <item>
          <name>NTP時刻差(ms)</name>
          <type>DEPENDENT</type>
          <key>Systemtime_ms</key>
          <delay>0</delay>
          <value_type>FLOAT</value_type>
          <units>ms</units>
          <description>NTP時刻とsystem時刻との差を示します。</description>
          <applications>
            <application>
              <name>chrony</name>
            </application>
          </applications>
          <preprocessing>
            <step>
              <type>REGEX</type>
              <params>System time :(.*) \1</params>
            </step>
            <step>
              <type>RTRIM</type>
              <params>seconds {fast|slow} of NTP time</params>
            </step>
            <step>
              <type>MULTIPLIER</type>
              <params>1000</params>
            </step>
          </preprocessing>
          <master_item>
            <key>system.run[chronyc tracking]</key>
          </master_item>
        </item>
        <item>
          <name>NTPポーリング間隔</name>
          <type>DEPENDENT</type>
          <key>Updateinterval</key>
          <delay>0</delay>
          <value_type>FLOAT</value_type>
          <units>s</units>
          <description>NTPサーバとの同期間隔を示します。</description>
          <applications>
            <application>
              <name>chrony</name>
            </application>
          </applications>
          <preprocessing>
            <step>
              <type>REGEX</type>
              <params>Update interval :(.*) \1</params>
            </step>
            <step>
              <type>RTRIM</type>
              <params>seconds</params>
            </step>
          </preprocessing>
          <master_item>
            <key>system.run[chronyc tracking]</key>
          </master_item>
        </item>
      </items>
      <macros>
        <macro>
          <macro>{$NTP_OFFSET}</macro>
          <value>50</value>
        </macro>
        <macro>
          <macro>{$NTP_OFFSET_LARGE}</macro>
          <value>5000</value>
        </macro>
      </macros>
    </template>
  </templates>
