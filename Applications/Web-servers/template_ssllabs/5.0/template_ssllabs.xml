<?xml version="1.0" encoding="UTF-8"?>
<zabbix_export>
  <version>5.0</version>
  <date>2021-11-09T04:57:58Z</date>
  <groups>
    <group>
      <name>Templates/Upwork</name>
    </group>
  </groups>
  <templates>
    <template>
      <template>SSLLabs</template>
      <name>SSLLabs</name>
      <description>## Description SSL certificate monitoring via SSLLabs open API ## Overview SSL certificates monitoring via SSLLabs open API. Please check also &lt;https://github.com/objectiveit/zabbix-ssllabs> for script details. ## Author ObjectiveIT</description>
      <groups>
        <group>
          <name>Templates/Upwork</name>
        </group>
      </groups>
      <items>
        <item>
          <name>SSL Certificate Grade</name>
          <type>TRAP</type>
          <key>ssllabs.certificate.grade</key>
          <delay>0</delay>
          <trends>0</trends>
          <value_type>TEXT</value_type>
          <triggers>
            <trigger>
              <expression>{str(A)}=1</expression>
              <name>Certificate grade is A</name>
              <priority>INFO</priority>
            </trigger>
            <trigger>
              <expression>{str(A+)}=1</expression>
              <name>Certificate grade is A+</name>
              <priority>INFO</priority>
            </trigger>
            <trigger>
              <expression>{str(B)}=1</expression>
              <name>Certificate grade is B</name>
              <priority>INFO</priority>
            </trigger>
            <trigger>
              <expression>{str(C)}=1</expression>
              <name>Certificate grade is C</name>
              <priority>WARNING</priority>
            </trigger>
            <trigger>
              <expression>{str(D)}=1</expression>
              <name>Certificate grade is D</name>
              <priority>AVERAGE</priority>
            </trigger>
            <trigger>
              <expression>{str(F)}=1</expression>
              <name>Certificate grade is F</name>
              <priority>HIGH</priority>
            </trigger>
          </triggers>
        </item>
      </items>
    </template>
  </templates>
</zabbix_export>