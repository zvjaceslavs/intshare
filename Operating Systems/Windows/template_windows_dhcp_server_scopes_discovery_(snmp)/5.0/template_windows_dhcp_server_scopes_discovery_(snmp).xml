<?xml version="1.0" encoding="UTF-8"?>
<zabbix_export>
  <version>5.0</version>
  <date>2021-10-19T20:35:31Z</date>
  <groups>
    <group>
      <name>Templates</name>
    </group>
  </groups>
  <templates>
    <template>
      <template>Template Discovery DHCP scopes</template>
      <name>Template Discovery DHCP scopes</name>
      <groups>
        <group>
          <name>Templates</name>
        </group>
      </groups>
      <applications>
        <application>
          <name>DHCP scopes</name>
        </application>
      </applications>
      <discovery_rules>
        <discovery_rule>
          <name>DHCP scopes</name>
          <type>SNMP_AGENT</type>
          <snmp_oid>discovery[{#IPSCOPE},SNMPv2-SMI::enterprises.311.1.3.2.1.1.1,{#IPINUSE},SNMPv2-SMI::enterprises.311.1.3.2.1.1.2,{#IPFREE},SNMPv2-SMI::enterprises.311.1.3.2.1.1.3]</snmp_oid>
          <key>dhcp.scope</key>
          <delay>30</delay>
          <item_prototypes>
            <item_prototype>
              <name>Number of addresses that are free on scope {#IPSCOPE}</name>
              <type>SNMP_AGENT</type>
              <snmp_oid>SNMPv2-SMI::enterprises.311.1.3.2.1.1.3.{#IPSCOPE}</snmp_oid>
              <key>ipfree[{#IPSCOPE}]</key>
              <delay>30</delay>
              <applications>
                <application>
                  <name>DHCP scopes</name>
                </application>
              </applications>
              <trigger_prototypes>
                <trigger_prototype>
                  <expression>{last()}&lt;5</expression>
                  <name>The number of addresses that are free on scope {#IPSCOPE} is low</name>
                  <priority>HIGH</priority>
                  <description>If the number of free adresses is less than 5, the trigger will be activated.</description>
                </trigger_prototype>
              </trigger_prototypes>
            </item_prototype>
          </item_prototypes>
        </discovery_rule>
      </discovery_rules>
    </template>
  </templates>
</zabbix_export>