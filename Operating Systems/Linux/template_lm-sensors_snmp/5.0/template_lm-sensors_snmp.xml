<?xml version="1.0" encoding="UTF-8"?>
<zabbix_export>
  <version>5.0</version>
  <date>2021-10-19T20:41:07Z</date>
  <groups>
    <group>
      <name>Templates/Servers Hardware</name>
    </group>
  </groups>
  <templates>
    <template>
      <template>Template SNMPv2 LM-SENSORS</template>
      <name>Template SNMPv2 LM-SENSORS</name>
      <description>Template for LM-SENSORS mib, works for any net-snmp based machine.</description>
      <groups>
        <group>
          <name>Templates/Servers Hardware</name>
        </group>
      </groups>
      <applications>
        <application>
          <name>CPU</name>
        </application>
        <application>
          <name>FANs</name>
        </application>
        <application>
          <name>PSU</name>
        </application>
        <application>
          <name>Temperature</name>
        </application>
      </applications>
      <discovery_rules>
        <discovery_rule>
          <name>Temperature Discovery</name>
          <type>SNMP_AGENT</type>
          <snmp_oid>discovery[{#SNMPVALUE},LM-SENSORS-MIB::lmTempSensorsDevice]</snmp_oid>
          <key>lmsensors</key>
          <delay>1h</delay>
          <filter>
            <evaltype>OR</evaltype>
            <conditions>
              <condition>
                <macro>{#SNMPVALUE}</macro>
                <value>^CPU</value>
                <operator>NOT_MATCHES_REGEX</operator>
                <formulaid>A</formulaid>
              </condition>
              <condition>
                <macro>{#SNMPVALUE}</macro>
                <value>^Core</value>
                <operator>NOT_MATCHES_REGEX</operator>
                <formulaid>B</formulaid>
              </condition>
              <condition>
                <macro>{#SNMPVALUE}</macro>
                <value>^Package</value>
                <operator>NOT_MATCHES_REGEX</operator>
                <formulaid>C</formulaid>
              </condition>
            </conditions>
          </filter>
          <lifetime>7d</lifetime>
          <description>Discover non-CPU temperature entities in LM Sensors</description>
          <item_prototypes>
            <item_prototype>
              <name>Temperature Sensor {#SNMPVALUE}</name>
              <type>SNMP_AGENT</type>
              <snmp_oid>LM-SENSORS-MIB::lmTempSensorsValue.{#SNMPINDEX}</snmp_oid>
              <key>lmTempSensorsValue[{#SNMPVALUE}]</key>
              <history>7d</history>
              <value_type>FLOAT</value_type>
              <units>C</units>
              <applications>
                <application>
                  <name>Temperature</name>
                </application>
              </applications>
              <preprocessing>
                <step>
                  <type>MULTIPLIER</type>
                  <params>0.001</params>
                </step>
              </preprocessing>
            </item_prototype>
          </item_prototypes>
        </discovery_rule>
        <discovery_rule>
          <name>CPU Temperature Discovery</name>
          <type>SNMP_AGENT</type>
          <snmp_oid>discovery[{#SNMPVALUE},LM-SENSORS-MIB::lmTempSensorsDevice]</snmp_oid>
          <key>lmsensors.cpu</key>
          <delay>1h</delay>
          <filter>
            <evaltype>OR</evaltype>
            <conditions>
              <condition>
                <macro>{#SNMPVALUE}</macro>
                <value>^CPU</value>
                <formulaid>A</formulaid>
              </condition>
              <condition>
                <macro>{#SNMPVALUE}</macro>
                <value>^Package</value>
                <formulaid>B</formulaid>
              </condition>
              <condition>
                <macro>{#SNMPVALUE}</macro>
                <value>^Core</value>
                <formulaid>C</formulaid>
              </condition>
            </conditions>
          </filter>
          <lifetime>7d</lifetime>
          <description>Discover CPU temperature entities in LM Sensors</description>
          <item_prototypes>
            <item_prototype>
              <name>CPU Temperature {#SNMPVALUE}</name>
              <type>SNMP_AGENT</type>
              <snmp_oid>LM-SENSORS-MIB::lmTempSensorsValue.{#SNMPINDEX}</snmp_oid>
              <key>lmsensors.cpu[{#SNMPVALUE}]</key>
              <history>7d</history>
              <value_type>FLOAT</value_type>
              <units>C</units>
              <applications>
                <application>
                  <name>CPU</name>
                </application>
              </applications>
              <preprocessing>
                <step>
                  <type>MULTIPLIER</type>
                  <params>0.001</params>
                </step>
              </preprocessing>
              <trigger_prototypes>
                <trigger_prototype>
                  <expression>{last(3)}>{$CPU_HIGH}</expression>
                  <name>CPU {#SENSOR_NAME} high temp</name>
                  <priority>WARNING</priority>
                  <description>CPU temperature is higher than {$CPU_HIGH} currently {ITEM.VALUE}</description>
                </trigger_prototype>
              </trigger_prototypes>
            </item_prototype>
          </item_prototypes>
        </discovery_rule>
        <discovery_rule>
          <name>FAN Discovery</name>
          <type>SNMP_AGENT</type>
          <snmp_oid>discovery[{#SNMPVALUE},LM-SENSORS-MIB::lmFanSensorsDevice]</snmp_oid>
          <key>lmsensors.fan</key>
          <delay>1h</delay>
          <filter>
            <evaltype>OR</evaltype>
          </filter>
          <lifetime>7d</lifetime>
          <description>Discover Fan entities in LM Sensors</description>
          <item_prototypes>
            <item_prototype>
              <name>FAN Speed {#SNMPVALUE}</name>
              <type>SNMP_AGENT</type>
              <snmp_oid>LM-SENSORS-MIB::lmFanSensorsValue.{#SNMPINDEX}</snmp_oid>
              <key>lmsensors.fan[{#SNMPVALUE}]</key>
              <history>7d</history>
              <units>rpm</units>
              <applications>
                <application>
                  <name>FANs</name>
                </application>
              </applications>
            </item_prototype>
          </item_prototypes>
        </discovery_rule>
        <discovery_rule>
          <name>PSU Voltages Discovery</name>
          <type>SNMP_AGENT</type>
          <snmp_oid>discovery[{#SNMPVALUE},LM-SENSORS-MIB::lmVoltSensorsDevice]</snmp_oid>
          <key>lmsensors.volt</key>
          <delay>1h</delay>
          <filter>
            <evaltype>OR</evaltype>
          </filter>
          <lifetime>7d</lifetime>
          <description>Discover PSU Voltages in LM Sensors</description>
          <item_prototypes>
            <item_prototype>
              <name>PSU Voltage {#SNMPVALUE}</name>
              <type>SNMP_AGENT</type>
              <snmp_oid>LM-SENSORS-MIB::lmVoltSensorsValue.{#SNMPINDEX}</snmp_oid>
              <key>lmsensors.volt[{#SNMPVALUE}]</key>
              <history>7d</history>
              <value_type>FLOAT</value_type>
              <units>vcc</units>
              <applications>
                <application>
                  <name>PSU</name>
                </application>
              </applications>
              <preprocessing>
                <step>
                  <type>MULTIPLIER</type>
                  <params>0.001</params>
                </step>
              </preprocessing>
            </item_prototype>
          </item_prototypes>
        </discovery_rule>
      </discovery_rules>
      <macros>
        <macro>
          <macro>{$CPU_HIGH}</macro>
          <value>60.0</value>
          <description>High cpu temp for alert</description>
        </macro>
      </macros>
    </template>
  </templates>
</zabbix_export>