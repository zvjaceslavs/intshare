            <host>Template Sensor ProDigital Term-1Net</host>
            <key>temp.C</key>
          </item>
        </graph_item>
        <graph_item>
          <sortorder>1</sortorder>
          <color>42A5F5</color>
          <item>
            <host>Template Sensor ProDigital Term-1Net</host>
            <key>umidade.percent</key>
          </item>
        </graph_item>
      </graph_items>
    </graph>
  </graphs>
