<?xml version="1.0" encoding="UTF-8"?>
<zabbix_export>
  <version>5.0</version>
  <date>2021-10-22T10:09:16Z</date>
  <groups>
    <group>
      <name>Templates/Personalizados/Sensores</name>
    </group>
  </groups>
  <templates>
    <template>
      <template>Template Sensor ProDigital Term-1Net</template>
      <name>Template Sensor ProDigital Term-1Net</name>
      <description>Template para o sensor de umidade e temperatura ProDigital Term-1Net</description>
      <groups>
        <group>
          <name>Templates/Personalizados/Sensores</name>
        </group>
      </groups>
      <applications>
        <application>
          <name>Sensores</name>
        </application>
      </applications>
      <items>
        <item>
          <name>Temperatura</name>
          <type>SNMP_AGENT</type>
          <snmp_oid>1.3.6.1.4.1.48430.1.1.2.1</snmp_oid>
          <key>temp.C</key>
          <delay>60s</delay>
          <value_type>FLOAT</value_type>
          <units>°C</units>
          <applications>
            <application>
              <name>Sensores</name>
            </application>
          </applications>
          <triggers>
            <trigger>
              <expression>{last(1m)}>=30</expression>
              <name>ATENÇÃO - Temperatura de 30°C e subindo em {HOST.NAME}</name>
              <priority>DISASTER</priority>
            </trigger>
            <trigger>
              <expression>{nodata(1m)}=1</expression>
              <name>Sem dados de temperatura em {HOST.NAME}</name>
              <priority>AVERAGE</priority>
            </trigger>
            <trigger>
              <expression>{last(1m)}&lt;=10</expression>
              <name>Temperatura de 10°C e caindo em {HOST.NAME}</name>
              <priority>HIGH</priority>
            </trigger>
            <trigger>
              <expression>{last(1m)}>=25</expression>
              <name>Temperatura de 25°C e subindo em {HOST.NAME}</name>
              <priority>HIGH</priority>
            </trigger>
          </triggers>
        </item>
        <item>
          <name>Umidade</name>
          <type>SNMP_AGENT</type>
          <snmp_oid>1.3.6.1.4.1.48430.1.1.2.3</snmp_oid>
          <key>umidade.percent</key>
          <delay>60s</delay>
          <value_type>FLOAT</value_type>
          <units>%</units>
          <applications>
            <application>
              <name>Sensores</name>
            </application>
          </applications>
        </item>
      </items>
    </template>
  </templates>
  <graphs>
    <graph>
      <name>Temperatura °C e Umidade %</name>
      <ymin_type_1>FIXED</ymin_type_1>
      <graph_items>
        <graph_item>
          <drawtype>BOLD_LINE</drawtype>
          <color>FF0000</color>
