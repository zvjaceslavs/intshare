<?xml version="1.0" encoding="UTF-8"?>
<zabbix_export>
  <version>5.0</version>
  <date>2021-10-26T04:43:03Z</date>
  <groups>
    <group>
      <name>Autenticadores</name>
    </group>
  </groups>
  <templates>
    <template>
      <template>SFP Mikrotik</template>
      <name>SFP Mikrotik</name>
      <groups>
        <group>
          <name>Autenticadores</name>
        </group>
      </groups>
      <discovery_rules>
        <discovery_rule>
          <name>Signal SFP Mikrotik</name>
          <type>SNMP_AGENT</type>
          <snmp_oid>discovery[{#SNMPVALUE},IF-MIB::ifDescr,{#IFDESCR},1.3.6.1.2.1.2.2.1.2]</snmp_oid>
          <key>signal.sfp</key>
          <delay>30s</delay>
          <filter>
            <evaltype>AND</evaltype>
            <conditions>
              <condition>
                <macro>{#IFDESCR}</macro>
                <value>@sfp</value>
                <formulaid>A</formulaid>
              </condition>
            </conditions>
          </filter>
          <item_prototypes>
            <item_prototype>
              <name>RX $1</name>
              <type>SNMP_AGENT</type>
              <snmp_oid>SNMPv2-SMI::enterprises.14988.1.1.19.1.1.10.{#SNMPINDEX}</snmp_oid>
              <key>RX[{#SNMPVALUE}]</key>
              <delay>30s</delay>
              <history>10d</history>
              <trends>35d</trends>
              <value_type>FLOAT</value_type>
              <units>dbm</units>
              <preprocessing>
                <step>
                  <type>MULTIPLIER</type>
                  <params>0.001</params>
                </step>
              </preprocessing>
            </item_prototype>
            <item_prototype>
              <name>Temperatura $1</name>
              <type>SNMP_AGENT</type>
              <snmp_oid>SNMPv2-SMI::enterprises.14988.1.1.19.1.1.6.{#SNMPINDEX}</snmp_oid>
              <key>temperatura[{#SNMPVALUE}]</key>
              <delay>30s</delay>
              <history>10d</history>
              <trends>35d</trends>
              <units>C</units>
              <trigger_prototypes>
                <trigger_prototype>
                  <expression>{last()}>50</expression>
                  <name>Alarme Temperatura - atenção</name>
                  <priority>WARNING</priority>
                </trigger_prototype>
                <trigger_prototype>
                  <expression>{last()}>=55</expression>
                  <name>Alarme Temperatura - Critico</name>
                  <priority>HIGH</priority>
                </trigger_prototype>
              </trigger_prototypes>
            </item_prototype>
            <item_prototype>
              <name>TX $1</name>
              <type>SNMP_AGENT</type>
              <snmp_oid>SNMPv2-SMI::enterprises.14988.1.1.19.1.1.9.{#SNMPINDEX}</snmp_oid>
              <key>TX[{#SNMPVALUE}]</key>
              <delay>30s</delay>
              <history>10d</history>
              <trends>35d</trends>
              <value_type>FLOAT</value_type>
              <units>dbm</units>
              <preprocessing>
                <step>
                  <type>MULTIPLIER</type>
                  <params>0.001</params>
                </step>
              </preprocessing>
            </item_prototype>
          </item_prototypes>
          <trigger_prototypes>
            <trigger_prototype>
              <expression>{SFP Mikrotik:RX[{#SNMPVALUE}].change()}>-2 or {SFP Mikrotik:TX[{#SNMPVALUE}].change()}>-2</expression>
              <name>SFP Signal Change</name>
              <priority>AVERAGE</priority>
            </trigger_prototype>
          </trigger_prototypes>
          <graph_prototypes>
            <graph_prototype>
              <name>Signal SFP {#SNMPVALUE}</name>
              <graph_items>
                <graph_item>
                  <drawtype>GRADIENT_LINE</drawtype>
                  <color>199C0D</color>
                  <item>
                    <host>SFP Mikrotik</host>
                    <key>RX[{#SNMPVALUE}]</key>
                  </item>
                </graph_item>
                <graph_item>
                  <sortorder>1</sortorder>
                  <drawtype>GRADIENT_LINE</drawtype>
                  <color>FF0000</color>
                  <item>
                    <host>SFP Mikrotik</host>
                    <key>TX[{#SNMPVALUE}]</key>
                  </item>
                </graph_item>
              </graph_items>
            </graph_prototype>
            <graph_prototype>
              <name>Temperatura {#SNMPVALUE}</name>
              <graph_items>
                <graph_item>
                  <drawtype>GRADIENT_LINE</drawtype>
                  <color>199C0D</color>
                  <item>
                    <host>SFP Mikrotik</host>
                    <key>temperatura[{#SNMPVALUE}]</key>
                  </item>
                </graph_item>
              </graph_items>
            </graph_prototype>
          </graph_prototypes>
        </discovery_rule>
      </discovery_rules>
    </template>
  </templates>
</zabbix_export>