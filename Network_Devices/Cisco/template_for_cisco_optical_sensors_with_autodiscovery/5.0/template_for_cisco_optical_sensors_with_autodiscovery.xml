              <snmp_oid>CISCO-ENTITY-SENSOR-MIB::entSensorThresholdEvaluation.{#SNMPINDEX}.1</snmp_oid>
              <key>sensorte1[{#SNMPINDEX}]</key>
              <delay>300</delay>
              <history>7d</history>
              <trends>30d</trends>
