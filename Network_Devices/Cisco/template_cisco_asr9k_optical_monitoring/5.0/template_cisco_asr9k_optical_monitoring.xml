<?xml version="1.0" encoding="UTF-8"?>
<zabbix_export>
  <version>5.0</version>
  <date>2021-11-09T04:53:58Z</date>
  <groups>
    <group>
      <name>ZBX-CISCO-TEMPLATES</name>
    </group>
  </groups>
  <templates>
    <template>
      <template>ZBX-CISCO-ASR9001-OPTICAL-MONITORING</template>
      <name>ZBX-CISCO-ASR9001-OPTICAL-MONITORING</name>
      <description>## Overview README: &lt;https://github.com/hacktivism-github/zbx-templates-repository/blob/master/zbx-cisco/ASR9k/optical-monitoring/README.md> ![ASR9k Optical Monitoring](media/com_mtree/images/listings/m/515.png) ## Author Bruno Teixeira</description>
      <groups>
        <group>
          <name>ZBX-CISCO-TEMPLATES</name>
        </group>
      </groups>
      <applications>
        <application>
          <name>IOS-XR Optical Monitoring</name>
        </application>
      </applications>
      <discovery_rules>
        <discovery_rule>
          <name>Interface Sensor</name>
          <type>SNMP_AGENT</type>
          <snmp_oid>discovery[{#SNMPVALUE},ENTITY-MIB::entPhysicalName]</snmp_oid>
          <key>entPhysicalName</key>
          <delay>300</delay>
          <filter>
            <conditions>
              <condition>
                <macro>{#SNMPVALUE}</macro>
                <value>@ASR9k Optical Levels</value>
                <formulaid>A</formulaid>
              </condition>
            </conditions>
          </filter>
          <lifetime>7d</lifetime>
          <description>ENTITY-MIB::entPhysicalDescr (.1.3.6.1.2.1.47.1.1.1.1.2) ENTITY-MIB::entPhysicalName (.1.3.6.1.2.1.47.1.1.1.1.7) A textual description of physical entity. This object should contain a string that identifies the manufacturer's name for the physical entity, and should be set to a distinct value for each version or model of the physical entity.</description>
          <item_prototypes>
            <item_prototype>
              <name>Thresholds::$1 | Warning High</name>
              <type>SNMP_AGENT</type>
              <snmp_oid>entSensorThresholdValue.{#SNMPINDEX}.2</snmp_oid>
              <key>entSensorThresholdRxTxValueHighWarn[{#SNMPVALUE}]</key>
              <delay>300</delay>
              <history>7d</history>
              <value_type>FLOAT</value_type>
              <units>mW</units>
              <applications>
                <application>
                  <name>IOS-XR Optical Monitoring</name>
                </application>
              </applications>
              <preprocessing>
                <step>
                  <type>MULTIPLIER</type>
                  <params>0.001</params>
                </step>
              </preprocessing>
            </item_prototype>
            <item_prototype>
              <name>Thresholds::$1 | Alarm High</name>
              <type>SNMP_AGENT</type>
              <snmp_oid>entSensorThresholdValue.{#SNMPINDEX}.4</snmp_oid>
              <key>entSensorThresholdRxTxValueHigh[{#SNMPVALUE}]</key>
              <delay>300</delay>
              <history>7d</history>
              <value_type>FLOAT</value_type>
              <units>mW</units>
              <description>This variable indicates the value of the threshold. To correctly display or interpret this variable's value, you must also know entSensorType, entSensorScale, and entSensorPrecision. However, you can directly compare entSensorValue with the threshold values given in entSensorThresholdTable without any semantic knowledge.</description>
              <applications>
                <application>
                  <name>IOS-XR Optical Monitoring</name>
                </application>
              </applications>
              <preprocessing>
                <step>
                  <type>MULTIPLIER</type>
                  <params>0.001</params>
                </step>
              </preprocessing>
            </item_prototype>
            <item_prototype>
              <name>Thresholds::$1 | Warning Low</name>
              <type>SNMP_AGENT</type>
              <snmp_oid>entSensorThresholdValue.{#SNMPINDEX}.1</snmp_oid>
              <key>entSensorThresholdRxTxValueLowWarn[{#SNMPVALUE}]</key>
              <delay>300</delay>
              <history>7d</history>
              <value_type>FLOAT</value_type>
              <units>mW</units>
              <applications>
                <application>
                  <name>IOS-XR Optical Monitoring</name>
                </application>
              </applications>
              <preprocessing>
                <step>
                  <type>MULTIPLIER</type>
                  <params>0.001</params>
                </step>
              </preprocessing>
            </item_prototype>
            <item_prototype>
              <name>Thresholds::$1 | Alarm Low</name>
              <type>SNMP_AGENT</type>
              <snmp_oid>entSensorThresholdValue.{#SNMPINDEX}.3</snmp_oid>
              <key>entSensorThresholdRxTxValueLow[{#SNMPVALUE}]</key>
              <delay>300</delay>
              <history>7d</history>
              <value_type>FLOAT</value_type>
              <units>mW</units>
              <applications>
                <application>
                  <name>IOS-XR Optical Monitoring</name>
                </application>
              </applications>
              <preprocessing>
                <step>
                  <type>MULTIPLIER</type>
                  <params>0.001</params>
                </step>
              </preprocessing>
            </item_prototype>
            <item_prototype>
              <name>$1</name>
              <type>SNMP_AGENT</type>
              <snmp_oid>CISCO-ENTITY-SENSOR-MIB::entSensorValue.{#SNMPINDEX}</snmp_oid>
              <key>entSensorValue[{#SNMPVALUE}]</key>
              <delay>300</delay>
              <history>7d</history>
              <value_type>FLOAT</value_type>
              <units>mW</units>
              <applications>
                <application>
                  <name>IOS-XR Optical Monitoring</name>
                </application>
              </applications>
              <preprocessing>
                <step>
                  <type>MULTIPLIER</type>
                  <params>0.001</params>
                </step>
              </preprocessing>
            </item_prototype>
          </item_prototypes>
          <trigger_prototypes>
            <trigger_prototype>
              <expression>{ZBX-CISCO-ASR9001-OPTICAL-MONITORING:entSensorValue[{#SNMPVALUE}].last(0)}>{ZBX-CISCO-ASR9001-OPTICAL-MONITORING:entSensorThresholdRxTxValueHigh[{#SNMPVALUE}].last(0)}</expression>
              <name>[10.001] High signal ALARM for {#SNMPVALUE}</name>
              <priority>HIGH</priority>
            </trigger_prototype>
            <trigger_prototype>
              <expression>{ZBX-CISCO-ASR9001-OPTICAL-MONITORING:entSensorThresholdRxTxValueHigh[{#SNMPVALUE}].last(0)}>{ZBX-CISCO-ASR9001-OPTICAL-MONITORING:entSensorValue[{#SNMPVALUE}].last(0)} and {ZBX-CISCO-ASR9001-OPTICAL-MONITORING:entSensorValue[{#SNMPVALUE}].last(0)}>{ZBX-CISCO-ASR9001-OPTICAL-MONITORING:entSensorThresholdRxTxValueHighWarn[{#SNMPVALUE}].last(0)}</expression>
              <name>[10.001] High signal WARNING for {#SNMPVALUE}</name>
              <priority>WARNING</priority>
            </trigger_prototype>
            <trigger_prototype>
              <expression>{ZBX-CISCO-ASR9001-OPTICAL-MONITORING:entSensorValue[{#SNMPVALUE}].last(0)}&lt;{ZBX-CISCO-ASR9001-OPTICAL-MONITORING:entSensorThresholdRxTxValueLow[{#SNMPVALUE}].last(0)}</expression>
              <name>[10.001] Low signal ALARM for {#SNMPVALUE}</name>
              <priority>HIGH</priority>
            </trigger_prototype>
            <trigger_prototype>
              <expression>{ZBX-CISCO-ASR9001-OPTICAL-MONITORING:entSensorThresholdRxTxValueLowWarn[{#SNMPVALUE}].last(0)}>{ZBX-CISCO-ASR9001-OPTICAL-MONITORING:entSensorValue[{#SNMPVALUE}].last(0)} and {ZBX-CISCO-ASR9001-OPTICAL-MONITORING:entSensorValue[{#SNMPVALUE}].last(0)}>{ZBX-CISCO-ASR9001-OPTICAL-MONITORING:entSensorThresholdRxTxValueLow[{#SNMPVALUE}].last(0)}</expression>
              <name>[10.001] Low signal WARNING for {#SNMPVALUE}</name>
              <priority>WARNING</priority>
            </trigger_prototype>
          </trigger_prototypes>
          <graph_prototypes>
            <graph_prototype>
              <name>{#SNMPVALUE}</name>
              <graph_items>
                <graph_item>
                  <drawtype>BOLD_LINE</drawtype>
                  <color>1A7C11</color>
                  <item>
                    <host>ZBX-CISCO-ASR9001-OPTICAL-MONITORING</host>
                    <key>entSensorValue[{#SNMPVALUE}]</key>
                  </item>
                </graph_item>
                <graph_item>
                  <sortorder>1</sortorder>
                  <drawtype>BOLD_LINE</drawtype>
                  <color>F63100</color>
                  <item>
                    <host>ZBX-CISCO-ASR9001-OPTICAL-MONITORING</host>
                    <key>entSensorThresholdRxTxValueHigh[{#SNMPVALUE}]</key>
                  </item>
                </graph_item>
                <graph_item>
                  <sortorder>2</sortorder>
                  <drawtype>BOLD_LINE</drawtype>
                  <color>F63100</color>
                  <item>
                    <host>ZBX-CISCO-ASR9001-OPTICAL-MONITORING</host>
                    <key>entSensorThresholdRxTxValueLow[{#SNMPVALUE}]</key>
                  </item>
                </graph_item>
                <graph_item>
                  <sortorder>3</sortorder>
                  <color>FF8000</color>
                  <item>
                    <host>ZBX-CISCO-ASR9001-OPTICAL-MONITORING</host>
                    <key>entSensorThresholdRxTxValueHighWarn[{#SNMPVALUE}]</key>
                  </item>
                </graph_item>
                <graph_item>
                  <sortorder>4</sortorder>
                  <color>FF8000</color>
                  <item>
                    <host>ZBX-CISCO-ASR9001-OPTICAL-MONITORING</host>
                    <key>entSensorThresholdRxTxValueLowWarn[{#SNMPVALUE}]</key>
                  </item>
                </graph_item>
              </graph_items>
            </graph_prototype>
          </graph_prototypes>
        </discovery_rule>
      </discovery_rules>
    </template>
  </templates>
</zabbix_export>