<?xml version="1.0" encoding="UTF-8"?>
<zabbix_export>
  <version>5.0</version>
  <date>2021-11-09T08:45:12Z</date>
  <groups>
    <group>
      <name>cdnnow-sw</name>
    </group>
  </groups>
  <templates>
    <template>
      <template>SNMP Arista BGP4</template>
      <name>SNMP Arista BGP4</name>
      <description>## Overview Minimalistic template with SNMPv2 discovery Alerting on BGP session Admin UP and Oper not Estab. Collects AdminStatus, OperStatus, Recieved/Accepted/Announced Prefixes. SNMPv2 Community via {$SNMP\_COMMUNITY} Macro</description>
      <groups>
        <group>
          <name>cdnnow-sw</name>
        </group>
      </groups>
      <applications>
        <application>
          <name>Arista-BGP</name>
        </application>
      </applications>
      <discovery_rules>
        <discovery_rule>
          <name>Arista BGP4</name>
          <type>SNMP_AGENT</type>
          <snmp_oid>discovery[{#ASNUM}, .1.3.6.1.4.1.30065.4.1.1.2.1.10.1.1.4, {#PEERNAME}, .1.3.6.1.4.1.30065.4.1.1.2.1.14.1.1.4]</snmp_oid>
          <key>arista-snmp-discovery</key>
          <delay>1h</delay>
          <item_prototypes>
            <item_prototype>
              <name>Administrative status $2</name>
              <type>SNMP_AGENT</type>
              <snmp_oid>1.3.6.1.4.1.30065.4.1.1.2.1.12.1.1.4.{#SNMPINDEX}</snmp_oid>
              <key>arista-bgp-adminstatus[{#ASNUM}, {#PEERNAME}]</key>
              <history>10d</history>
              <applications>
                <application>
                  <name>Arista-BGP</name>
                </application>
              </applications>
            </item_prototype>
            <item_prototype>
              <name>Oper status $2</name>
              <type>SNMP_AGENT</type>
              <snmp_oid>1.3.6.1.4.1.30065.4.1.1.2.1.13.1.1.4.{#SNMPINDEX}</snmp_oid>
              <key>arista-bgp-operstatus[{#ASNUM}, {#PEERNAME}]</key>
              <history>30d</history>
              <applications>
                <application>
                  <name>Arista-BGP</name>
                </application>
              </applications>
            </item_prototype>
            <item_prototype>
              <name>Peer accepted Prefixes $2</name>
              <type>SNMP_AGENT</type>
              <snmp_oid>1.3.6.1.4.1.30065.4.1.1.8.1.4.1.1.4.{#SNMPINDEX}.1.1</snmp_oid>
              <key>arista-bgp-prf-acc[{#ASNUM}, {#PEERNAME}]</key>
              <delay>5m</delay>
              <history>31d</history>
              <applications>
                <application>
                  <name>Arista-BGP</name>
                </application>
              </applications>
            </item_prototype>
            <item_prototype>
              <name>Peer recieved Prefixes $2</name>
              <type>SNMP_AGENT</type>
              <snmp_oid>1.3.6.1.4.1.30065.4.1.1.8.1.3.1.1.4.{#SNMPINDEX}.1.1</snmp_oid>
              <key>arista-bgp-prf-rcv[{#ASNUM}, {#PEERNAME}]</key>
              <delay>5m</delay>
              <history>31d</history>
              <applications>
                <application>
                  <name>Arista-BGP</name>
                </application>
              </applications>
            </item_prototype>
            <item_prototype>
              <name>Peer announced Prefixes $2</name>
              <type>SNMP_AGENT</type>
              <snmp_oid>1.3.6.1.4.1.30065.4.1.1.8.1.5.1.1.4.{#SNMPINDEX}.1.1</snmp_oid>
              <key>arista-bgp-prf-snd[{#ASNUM}, {#PEERNAME}]</key>
              <delay>5m</delay>
              <history>31d</history>
              <applications>
                <application>
                  <name>Arista-BGP</name>
                </application>
              </applications>
            </item_prototype>
          </item_prototypes>
          <trigger_prototypes>
            <trigger_prototype>
              <expression>{SNMP Arista BGP4:arista-bgp-operstatus[{#ASNUM}, {#PEERNAME}].last()}&lt;>6 and {SNMP Arista BGP4:arista-bgp-adminstatus[{#ASNUM}, {#PEERNAME}].last()}=2</expression>
              <name>BGP status not "Established" for {#ASNUM}, {#PEERNAME}</name>
              <priority>DISASTER</priority>
            </trigger_prototype>
          </trigger_prototypes>
        </discovery_rule>
      </discovery_rules>
    </template>
  </templates>
</zabbix_export>