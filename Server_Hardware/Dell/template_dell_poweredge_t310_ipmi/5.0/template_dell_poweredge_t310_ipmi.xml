<?xml version="1.0" encoding="UTF-8"?>
<zabbix_export>
  <version>5.0</version>
  <date>2021-10-22T10:07:28Z</date>
  <groups>
    <group>
      <name>Templates</name>
    </group>
    <group>
      <name>Templates/Servers Hardware</name>
    </group>
  </groups>
  <templates>
    <template>
      <template>Template_IPMI_Dell_PowerEdge_T310</template>
      <name>IPMI Dell Power Edge T310</name>
      <groups>
        <group>
          <name>Templates</name>
        </group>
        <group>
          <name>Templates/Servers Hardware</name>
        </group>
      </groups>
      <applications>
        <application>
          <name>Fans Sensors</name>
        </application>
        <application>
          <name>Power Supply</name>
        </application>
        <application>
          <name>Temperature Sensors</name>
        </application>
      </applications>
      <items>
        <item>
          <name>Ambient Temp</name>
          <type>IPMI</type>
          <key>ipmi.ambient.temp</key>
          <delay>300</delay>
          <value_type>FLOAT</value_type>
          <units>C</units>
          <ipmi_sensor>Ambient Temp</ipmi_sensor>
          <applications>
            <application>
              <name>Temperature Sensors</name>
            </application>
          </applications>
          <triggers>
            <trigger>
              <expression>({TRIGGER.VALUE}=0 and {last(0)}&lt;=3) or ({TRIGGER.VALUE}=1 and {last(0)}&lt;=8)</expression>
              <name>Ambient Temp temperature lower critical on {HOSTNAME}</name>
              <priority>HIGH</priority>
            </trigger>
            <trigger>
              <expression>({TRIGGER.VALUE}=0 and {last(0)}&lt;=8) or ({TRIGGER.VALUE}=1 and {last(0)}&lt;=13)</expression>
              <name>Ambient Temp temperature lower non-critical on {HOSTNAME}</name>
              <priority>AVERAGE</priority>
            </trigger>
            <trigger>
              <expression>({TRIGGER.VALUE}=0 and {last(0)}>=47) or ({TRIGGER.VALUE}=1 and {last(0)}>=42)</expression>
              <name>Ambient Temp temperature upper critical on {HOSTNAME}</name>
              <priority>HIGH</priority>
            </trigger>
            <trigger>
              <expression>({TRIGGER.VALUE}=0 and {last(0)}>=42) or ({TRIGGER.VALUE}=1 and {last(0)}>=37)</expression>
              <name>Ambient Temp temperature upper non-critical on {HOSTNAME}</name>
              <priority>AVERAGE</priority>
            </trigger>
          </triggers>
        </item>
        <item>
          <name>Fan 1</name>
          <type>IPMI</type>
          <key>ipmi.fan1.rpm</key>
          <delay>300</delay>
          <history>7d</history>
          <units>RPM</units>
          <ipmi_sensor>FAN 1 RPM</ipmi_sensor>
          <applications>
            <application>
              <name>Fans Sensors</name>
            </application>
          </applications>
          <triggers>
            <trigger>
              <expression>({TRIGGER.VALUE}=0 and {last(0)}&lt;=1200) or ({TRIGGER.VALUE}=1 and {last(0)}&lt;=1500)</expression>
              <name>FAN MOD 1A RPM lower critical on {HOSTNAME}</name>
              <priority>HIGH</priority>
            </trigger>
          </triggers>
        </item>
        <item>
          <name>Power consumption</name>
          <type>IPMI</type>
          <key>ipmi.power.consumption</key>
          <delay>300</delay>
          <units>W</units>
          <ipmi_sensor>System Level</ipmi_sensor>
          <applications>
            <application>
              <name>Power Supply</name>
            </application>
          </applications>
          <valuemap>
            <name>Service state</name>
          </valuemap>
          <triggers>
            <trigger>
              <expression>({TRIGGER.VALUE}=0 and {last(0)}>350) or ({TRIGGER.VALUE}=1 and {last(0)}>320)</expression>
              <name>Power consumption too high</name>
              <priority>AVERAGE</priority>
            </trigger>
          </triggers>
        </item>
        <item>
          <name>Power State</name>
          <type>IPMI</type>
          <key>ipmi.power.state</key>
          <delay>300</delay>
          <history>7d</history>
          <ipmi_sensor>power</ipmi_sensor>
          <applications>
            <application>
              <name>Power Supply</name>
            </application>
          </applications>
          <valuemap>
            <name>Service state</name>
          </valuemap>
          <triggers>
            <trigger>
              <expression>{last(0)}=0</expression>
              <name>Power status changed on {HOSTNAME}</name>
              <priority>HIGH</priority>
            </trigger>
          </triggers>
        </item>
      </items>
    </template>
  </templates>
  <graphs>
    <graph>
      <name>Fan speed &amp; temperature</name>
      <graph_items>
        <graph_item>
          <color>00C800</color>
          <item>
            <host>Template_IPMI_Dell_PowerEdge_T310</host>
            <key>ipmi.fan1.rpm</key>
          </item>
        </graph_item>
        <graph_item>
          <sortorder>1</sortorder>
          <color>990000</color>
          <yaxisside>RIGHT</yaxisside>
          <item>
            <host>Template_IPMI_Dell_PowerEdge_T310</host>
            <key>ipmi.ambient.temp</key>
          </item>
        </graph_item>
      </graph_items>
    </graph>
    <graph>
      <name>Power consumption</name>
      <graph_items>
        <graph_item>
          <color>2774A4</color>
          <item>
            <host>Template_IPMI_Dell_PowerEdge_T310</host>
            <key>ipmi.power.consumption</key>
          </item>
        </graph_item>
      </graph_items>
    </graph>
  </graphs>
  <value_maps>
    <value_map>
      <name>Service state</name>
      <mappings>
        <mapping>
          <value>0</value>
          <newvalue>Down</newvalue>
        </mapping>
        <mapping>
          <value>1</value>
          <newvalue>Up</newvalue>
        </mapping>
      </mappings>
    </value_map>
  </value_maps>
</zabbix_export>