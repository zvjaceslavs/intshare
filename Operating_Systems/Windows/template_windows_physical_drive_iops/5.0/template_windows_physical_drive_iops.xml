                  <color>2774A4</color>
                  <item>
                    <host>Windows Physical Disk IOPS</host>
                    <key>AvgDiskBytesTotal[({#DISKNUMLET})]</key>
                  </item>
                </graph_item>
              </graph_items>
            </graph_prototype>
            <graph_prototype>
              <name>Disk ({#DISKNUMLET}) - Latency</name>
              <ymin_type_1>FIXED</ymin_type_1>
              <graph_items>
                <graph_item>
                  <drawtype>GRADIENT_LINE</drawtype>
