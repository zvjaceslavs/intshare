<?xml version="1.0" encoding="UTF-8"?>
<zabbix_export>
  <version>5.0</version>
  <date>2021-11-09T05:04:44Z</date>
  <groups>
    <group>
      <name>Windows Servers</name>
    </group>
  </groups>
  <templates>
    <template>
      <template>getWindowsMountPointsToFolders</template>
      <name>getWindowsMountPointsToFolders</name>
      <description>## Description Get Windows servers mount points to folders ## Overview Template Discovery Windows Mountpoints on Folders ================================================= The current Zabbix Agent does not support the functionality of discovering mounted fileSystems on folders for Windows OS This is still opened a feature request &lt;https://support.zabbix.com/browse/ZBXNEXT-1595> Installation ------------ ### Host Installation &lt;ul style="box-sizing: border-box; margin-bottom: 16px; margin-top: 0px; padding-left: 2em; color: #24292e; font-family: -apple-system, system-ui, 'Segoe UI', Helvetica, Arial, sans-serif, 'Apple C ## Author Douglas Lopez</description>
      <groups>
        <group>
          <name>Windows Servers</name>
        </group>
      </groups>
      <applications>
        <application>
          <name>Filesystems</name>
        </application>
      </applications>
      <discovery_rules>
        <discovery_rule>
          <name>Volume Mountpoints filesystem discovery</name>
          <type>ZABBIX_ACTIVE</type>
          <key>vfs.fs.customfolders.windowsmountpoints.discovery</key>
          <delay>1h</delay>
          <description>This Rule only Discover Disk at Mountpoints without Drive-Letters</description>
          <item_prototypes>
            <item_prototype>
              <name>Free disk space on $1</name>
              <type>ZABBIX_ACTIVE</type>
              <key>vfs.fs.size[{#DISKNAME},free]</key>
              <delay>1h</delay>
              <history>1w</history>
              <units>B</units>
              <applications>
                <application>
                  <name>Filesystems</name>
                </application>
              </applications>
            </item_prototype>
            <item_prototype>
              <name>Free disk space on $1 (percentage)</name>
              <type>ZABBIX_ACTIVE</type>
              <key>vfs.fs.size[{#DISKNAME},pfree]</key>
              <delay>1h</delay>
              <history>1w</history>
              <value_type>FLOAT</value_type>
              <units>%</units>
              <applications>
                <application>
                  <name>Filesystems</name>
                </application>
              </applications>
            </item_prototype>
            <item_prototype>
              <name>Total disk space on $1</name>
              <type>ZABBIX_ACTIVE</type>
              <key>vfs.fs.size[{#DISKNAME},total]</key>
              <delay>1h</delay>
              <history>1w</history>
              <units>B</units>
              <applications>
                <application>
                  <name>Filesystems</name>
                </application>
              </applications>
            </item_prototype>
            <item_prototype>
              <name>Used disk space on $1</name>
              <type>ZABBIX_ACTIVE</type>
              <key>vfs.fs.size[{#DISKNAME},used]</key>
              <delay>1h</delay>
              <history>1w</history>
              <units>B</units>
              <applications>
                <application>
                  <name>Filesystems</name>
                </application>
              </applications>
            </item_prototype>
          </item_prototypes>
          <trigger_prototypes>
            <trigger_prototype>
              <expression>{getWindowsMountPointsToFolders:vfs.fs.size[{#DISKNAME},pfree].last(0)}&lt;1 and {getWindowsMountPointsToFolders:vfs.fs.size[{#DISKNAME},pfree].last(0)}>10 and {getWindowsMountPointsToFolders:vfs.fs.size[{#DISKNAME},free].last(0)}>1</expression>
              <name>Free disk space is less than 1% on volume {#DISKNAME} ({ITEM.LASTVALUE3} Free Space left)</name>
              <priority>DISASTER</priority>
            </trigger_prototype>
            <trigger_prototype>
              <expression>{getWindowsMountPointsToFolders:vfs.fs.size[{#DISKNAME},pfree].last(0)}&lt;5 and {getWindowsMountPointsToFolders:vfs.fs.size[{#DISKNAME},pfree].last(0)}>10 and {getWindowsMountPointsToFolders:vfs.fs.size[{#DISKNAME},free].last(0)}>1</expression>
              <name>Free disk space is less than 5% on volume {#DISKNAME} ({ITEM.LASTVALUE3} Free Space left)</name>
              <priority>HIGH</priority>
            </trigger_prototype>
            <trigger_prototype>
              <expression>{getWindowsMountPointsToFolders:vfs.fs.size[{#DISKNAME},pfree].last(0)}&lt;10 and {getWindowsMountPointsToFolders:vfs.fs.size[{#DISKNAME},pfree].last(0)}>10 and {getWindowsMountPointsToFolders:vfs.fs.size[{#DISKNAME},free].last(0)}>1</expression>
              <name>Free disk space is less than 10% on volume {#DISKNAME} ({ITEM.LASTVALUE3} Free Space left)</name>
              <priority>WARNING</priority>
            </trigger_prototype>
            <trigger_prototype>
              <expression>{getWindowsMountPointsToFolders:vfs.fs.size[{#DISKNAME},pfree].last(0)}&lt;20 and {getWindowsMountPointsToFolders:vfs.fs.size[{#DISKNAME},pfree].last(0)}>10 and {getWindowsMountPointsToFolders:vfs.fs.size[{#DISKNAME},free].last(0)}>1</expression>
              <name>Free disk space is less than 20% on volume {#DISKNAME} ({ITEM.LASTVALUE3} Free Space left)</name>
              <priority>INFO</priority>
            </trigger_prototype>
          </trigger_prototypes>
          <graph_prototypes>
            <graph_prototype>
              <name>Disk space usage {#DISKNAME}</name>
              <width>600</width>
              <height>340</height>
              <yaxismax>0</yaxismax>
              <show_work_period>NO</show_work_period>
              <show_triggers>NO</show_triggers>
              <type>PIE</type>
              <show_3d>YES</show_3d>
              <graph_items>
                <graph_item>
                  <color>990000</color>
                  <type>GRAPH_SUM</type>
                  <item>
                    <host>getWindowsMountPointsToFolders</host>
                    <key>vfs.fs.size[{#DISKNAME},total]</key>
                  </item>
                </graph_item>
                <graph_item>
                  <sortorder>1</sortorder>
                  <color>009900</color>
                  <item>
                    <host>getWindowsMountPointsToFolders</host>
                    <key>vfs.fs.size[{#DISKNAME},free]</key>
                  </item>
                </graph_item>
              </graph_items>
            </graph_prototype>
          </graph_prototypes>
        </discovery_rule>
      </discovery_rules>
    </template>
  </templates>
</zabbix_export>