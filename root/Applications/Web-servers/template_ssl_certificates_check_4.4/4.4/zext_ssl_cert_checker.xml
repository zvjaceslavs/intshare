<?xml version="1.0" encoding="UTF-8"?>
<zabbix_export>
    <version>4.4</version>
    <date>2019-12-16T23:52:39Z</date>
    <groups>
        <group>
            <name>Templates/Applications</name>
        </group>
    </groups>
    <templates>
        <template>
            <template>Template SSL Cert Check External</template>
            <name>Template SSL Cert Check External</name>
            <groups>
                <group>
                    <name>Templates/Applications</name>
                </group>
            </groups>
            <applications>
                <application>
                    <name>SSL certificate</name>
                </application>
            </applications>
            <items>
                <item>
                    <name>HTTPS Service is running</name>
                    <type>SIMPLE</type>
                    <key>net.tcp.service[https,,{$SSL_PORT}]</key>
                    <delay>90</delay>
                    <history>7d</history>
                    <applications>
                        <application>
                            <name>SSL certificate</name>
                        </application>
                    </applications>
                    <valuemap>
                        <name>Service state</name>
                    </valuemap>
                    <triggers>
                        <trigger>
                            <expression>{max(5m)}&lt;1</expression>
                            <name>HTTPS Service is Down</name>
                            <priority>WARNING</priority>
                        </trigger>
                    </triggers>
                </item>
                <item>
                    <name>{$SNI} SSL certificate validity</name>
                    <type>EXTERNAL</type>
                    <key>zext_ssl_cert.sh[-d,{$SNI},{$SSL_PORT}]</key>
                    <delay>21600</delay>
                    <history>7d</history>
                    <value_type>FLOAT</value_type>
                    <units>days</units>
                    <applications>
                        <application>
                            <name>SSL certificate</name>
                        </application>
                    </applications>
                    <triggers>
                        <trigger>
                            <expression>{last(0)}&lt;=0</expression>
                            <name>SSL certificate on {$SNI} expired</name>
                            <priority>DISASTER</priority>
                        </trigger>
                        <trigger>
                            <expression>{last(0)}&lt;{$SNI_TIME_AVG}</expression>
                            <name>SSL certificate on {$SNI} expires in less than {$SNI_TIME_AVG} days ({ITEM.VALUE} days remaining)</name>
                            <priority>AVERAGE</priority>
                            <dependencies>
                                <dependency>
                                    <name>SSL certificate on {$SNI} expires in less than {$SNI_TIME_HIGH} days ({ITEM.VALUE} days remaining)</name>
                                    <expression>{Template SSL Cert Check External:zext_ssl_cert.sh[-d,{$SNI},{$SSL_PORT}].last(0)}&lt;{$SNI_TIME_HIGH}</expression>
                                </dependency>
                            </dependencies>
                        </trigger>
                        <trigger>
                            <expression>{last(0)}&lt;{$SNI_TIME_HIGH}</expression>
                            <name>SSL certificate on {$SNI} expires in less than {$SNI_TIME_HIGH} days ({ITEM.VALUE} days remaining)</name>
                            <priority>HIGH</priority>
                            <dependencies>
                                <dependency>
                                    <name>SSL certificate on {$SNI} expired</name>
                                    <expression>{Template SSL Cert Check External:zext_ssl_cert.sh[-d,{$SNI},{$SSL_PORT}].last(0)}&lt;=0</expression>
                                </dependency>
                            </dependencies>
                        </trigger>
                        <trigger>
                            <expression>{last(0)}&lt;{$SNI_TIME_INF}</expression>
                            <name>SSL certificate on {$SNI} expires in less than {$SNI_TIME_INF} days ({ITEM.VALUE} days remaining)</name>
                            <priority>INFO</priority>
                            <dependencies>
                                <dependency>
                                    <name>SSL certificate on {$SNI} expires in less than {$SNI_TIME_WARN} days ({ITEM.VALUE} days remaining)</name>
                                    <expression>{Template SSL Cert Check External:zext_ssl_cert.sh[-d,{$SNI},{$SSL_PORT}].last(0)}&lt;{$SNI_TIME_WARN}</expression>
                                </dependency>
                            </dependencies>
                        </trigger>
                        <trigger>
                            <expression>{last(0)}&lt;{$SNI_TIME_NC}</expression>
                            <name>SSL certificate on {$SNI} expires in less than {$SNI_TIME_NC} days ({ITEM.VALUE} days remaining)</name>
                            <dependencies>
                                <dependency>
                                    <name>SSL certificate on {$SNI} expires in less than {$SNI_TIME_INF} days ({ITEM.VALUE} days remaining)</name>
                                    <expression>{Template SSL Cert Check External:zext_ssl_cert.sh[-d,{$SNI},{$SSL_PORT}].last(0)}&lt;{$SNI_TIME_INF}</expression>
                                </dependency>
                            </dependencies>
                        </trigger>
                        <trigger>
                            <expression>{last(0)}&lt;{$SNI_TIME_WARN}</expression>
                            <name>SSL certificate on {$SNI} expires in less than {$SNI_TIME_WARN} days ({ITEM.VALUE} days remaining)</name>
                            <priority>WARNING</priority>
                            <dependencies>
                                <dependency>
                                    <name>SSL certificate on {$SNI} expires in less than {$SNI_TIME_AVG} days ({ITEM.VALUE} days remaining)</name>
                                    <expression>{Template SSL Cert Check External:zext_ssl_cert.sh[-d,{$SNI},{$SSL_PORT}].last(0)}&lt;{$SNI_TIME_AVG}</expression>
                                </dependency>
                            </dependencies>
                        </trigger>
                    </triggers>
                </item>
                <item>
                    <name>SSL certificate issuer</name>
                    <type>EXTERNAL</type>
                    <key>zext_ssl_cert.sh[-i,{$SNI},{$SSL_PORT}]</key>
                    <delay>21600</delay>
                    <history>1d</history>
                    <trends>0</trends>
                    <value_type>TEXT</value_type>
                    <applications>
                        <application>
                            <name>SSL certificate</name>
                        </application>
                    </applications>
                </item>
            </items>
            <macros>
                <macro>
                    <macro>{$SNI}</macro>
                    <value>{HOST.NAME}</value>
                    <description>Hostname Zabbix Macro</description>
                </macro>
                <macro>
                    <macro>{$SNI_TIME_AVG}</macro>
                    <value>14</value>
                    <description>Average Trigger</description>
                </macro>
                <macro>
                    <macro>{$SNI_TIME_HIGH}</macro>
                    <value>7</value>
                    <description>High Trigger</description>
                </macro>
                <macro>
                    <macro>{$SNI_TIME_INF}</macro>
                    <value>45</value>
                    <description>Information Trigger</description>
                </macro>
                <macro>
                    <macro>{$SNI_TIME_NC}</macro>
                    <value>60</value>
                    <description>Not Classified Trigger</description>
                </macro>
                <macro>
                    <macro>{$SNI_TIME_WARN}</macro>
                    <value>30</value>
                    <description>Warning Trigger</description>
                </macro>
                <macro>
                    <macro>{$SSL_PORT}</macro>
                    <value>443</value>
                    <description>Default SSL port</description>
                </macro>
            </macros>
        </template>
    </templates>
    <graphs>
        <graph>
            <name>SSL Certificate valid days</name>
            <graph_items>
                <graph_item>
                    <color>BB00BB</color>
                    <item>
                        <host>Template SSL Cert Check External</host>
                        <key>zext_ssl_cert.sh[-d,{$SNI},{$SSL_PORT}]</key>
                    </item>
                </graph_item>
            </graph_items>
        </graph>
    </graphs>
    <value_maps>
        <value_map>
            <name>Service state</name>
            <mappings>
                <mapping>
                    <value>0</value>
                    <newvalue>Down</newvalue>
                </mapping>
                <mapping>
                    <value>1</value>
                    <newvalue>Up</newvalue>
                </mapping>
            </mappings>
        </value_map>
    </value_maps>
</zabbix_export>
