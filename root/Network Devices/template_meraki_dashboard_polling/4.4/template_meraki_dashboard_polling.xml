<?xml version="1.0" encoding="UTF-8"?>
<zabbix_export>
    <version>4.4</version>
    <date>2020-04-30T19:38:48Z</date>
    <groups>
        <group>
            <name>Access Points</name>
        </group>
    </groups>
    <templates>
        <template>
            <template>Template Meraki Dashboard</template>
            <name>Template Meraki Dashboard</name>
            <groups>
                <group>
                    <name>Access Points</name>
                </group>
            </groups>
            <applications>
                <application>
                    <name>Meraki AP Info</name>
                </application>
                <application>
                    <name>Meraki SSID Info</name>
                </application>
            </applications>
            <discovery_rules>
                <discovery_rule>
                    <name>Meraki.AP</name>
                    <type>SNMPV2</type>
                    <snmp_community>{$SNMP_COMMUNITY}</snmp_community>
                    <snmp_oid>discovery[{#ITEM.NAME},1.3.6.1.4.1.29671.1.1.4.1.2,{#ITEM.STATUS},1.3.6.1.4.1.29671.1.1.4.1.3]</snmp_oid>
                    <key>MERAKI.AP.KEY</key>
                    <delay>4h</delay>
                    <port>16100</port>
                    <filter>
                        <conditions>
                            <condition>
                                <macro>{#ITEM.STATUS}</macro>
                                <value>1</value>
                                <formulaid>A</formulaid>
                            </condition>
                        </conditions>
                    </filter>
                    <lifetime>0</lifetime>
                    <description>Grabs AP name and Status.  Creates an Item if Status is up.</description>
                    <item_prototypes>
                        <item_prototype>
                            <name>Access Point {#ITEM.NAME}: Clients Connected</name>
                            <type>SNMPV2</type>
                            <snmp_community>{$SNMP_COMMUNITY}</snmp_community>
                            <snmp_oid>1.3.6.1.4.1.29671.1.1.4.1.5.{#SNMPINDEX}</snmp_oid>
                            <key>MerakiDeviceIndex.Clients.[{#SNMPINDEX}]</key>
                            <delay>5m</delay>
                            <port>16100</port>
                            <applications>
                                <application>
                                    <name>Meraki AP Info</name>
                                </application>
                            </applications>
                        </item_prototype>
                    </item_prototypes>
                </discovery_rule>
                <discovery_rule>
                    <name>Meraki.SSID</name>
                    <type>SNMPV2</type>
                    <snmp_community>{$SNMP_COMMUNITY}</snmp_community>
                    <snmp_oid>discovery[{#SSIDNAME},1.3.6.1.4.1.29671.1.1.2.1.2]</snmp_oid>
                    <key>MERAKI.SSID.KEY</key>
                    <delay>4h</delay>
                    <port>16100</port>
                    <description>Grabs SSID Names</description>
                    <item_prototypes>
                        <item_prototype>
                            <name>SSID: {#SSIDNAME}</name>
                            <type>SNMPV2</type>
                            <snmp_community>{$SNMP_COMMUNITY}</snmp_community>
                            <snmp_oid>1.3.6.1.4.1.29671.1.1.2.1.2.{#SNMPINDEX}</snmp_oid>
                            <key>MerakiDeviceIndex.SSID.[{#SNMPINDEX}]</key>
                            <delay>1h</delay>
                            <trends>0</trends>
                            <value_type>TEXT</value_type>
                            <port>16100</port>
                            <applications>
                                <application>
                                    <name>Meraki SSID Info</name>
                                </application>
                            </applications>
                        </item_prototype>
                    </item_prototypes>
                </discovery_rule>
            </discovery_rules>
        </template>
    </templates>
</zabbix_export>
