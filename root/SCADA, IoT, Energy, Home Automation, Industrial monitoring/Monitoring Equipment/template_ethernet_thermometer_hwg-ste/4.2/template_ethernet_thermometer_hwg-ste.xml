                    <key>sensorName</key>
                    <delay>1h</delay>
                    <filter>
                        <conditions>
                            <condition>
                                <macro>{#SNMPVALUE}</macro>
                                <value>^$</value>
                                <operator>NOT_MATCHES_REGEX</operator>
                                <formulaid>A</formulaid>
                            </condition>
                        </conditions>
                    </filter>
                    <description>{$SNMP_COMMUNITY} is a global macro.</description>
                    <item_prototypes>
                        <item_prototype>
                            <name>ID of sensor $1</name>
                            <type>SNMPV2</type>
                            <snmp_community>{$SNMP_COMMUNITY}</snmp_community>
                            <snmp_oid>SNMPv2-SMI::enterprises.21796.4.1.3.1.8.{#SNMPINDEX}</snmp_oid>
                            <key>sensorId[{#SNMPVALUE}]</key>
                            <delay>1d</delay>
                            <history>1w</history>
                            <trends>0</trends>
                            <applications>
                                <application>
                                    <name>Thermometer</name>
                                </application>
                            </applications>
                        </item_prototype>
                        <item_prototype>
                            <name>Index of sensor $1</name>
                            <type>SNMPV2</type>
                            <snmp_community>{$SNMP_COMMUNITY}</snmp_community>
                            <snmp_oid>SNMPv2-SMI::enterprises.21796.4.1.3.1.1.{#SNMPINDEX}</snmp_oid>
                            <key>sensorIndex[{#SNMPVALUE}]</key>
                            <delay>1d</delay>
                            <history>1w</history>
                            <trends>0</trends>
                            <applications>
                                <application>
                                    <name>Thermometer</name>
                                </application>
                            </applications>
                        </item_prototype>
                        <item_prototype>
                            <name>Name of sensor $1</name>
                            <type>SNMPV2</type>
                            <snmp_community>{$SNMP_COMMUNITY}</snmp_community>
                            <snmp_oid>SNMPv2-SMI::enterprises.21796.4.1.3.1.2.{#SNMPINDEX}</snmp_oid>
                            <key>sensorName[{#SNMPVALUE}]</key>
                            <delay>1d</delay>
                            <history>1w</history>
                            <trends>0</trends>
