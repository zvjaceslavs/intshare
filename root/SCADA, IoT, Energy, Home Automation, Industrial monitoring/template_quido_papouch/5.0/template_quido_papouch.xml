<?xml version="1.0" encoding="UTF-8"?>
<zabbix_export>
    <version>5.0</version>
    <date>2020-08-17T08:22:46Z</date>
    <groups>
        <group>
            <name>Templates/Network devices</name>
        </group>
    </groups>
    <templates>
        <template>
            <template>HW Quido</template>
            <name>HW Quido</name>
            <templates>
                <template>
                    <name>Module ICMP Ping</name>
                </template>
            </templates>
            <groups>
                <group>
                    <name>Templates/Network devices</name>
                </group>
            </groups>
            <applications>
                <application>
                    <name>General</name>
                </application>
                <application>
                    <name>Imputs</name>
                </application>
                <application>
                    <name>Outputs</name>
                </application>
            </applications>
            <items>
                <item>
                    <name>Location</name>
                    <type>SNMP_AGENT</type>
                    <snmp_oid>iso.3.6.1.4.1.18248.16.1.3.0</snmp_oid>
                    <key>quido.location</key>
                    <trends>0</trends>
                    <value_type>TEXT</value_type>
                    <inventory_link>LOCATION</inventory_link>
                    <applications>
                        <application>
                            <name>General</name>
                        </application>
                    </applications>
                </item>
                <item>
                    <name>Senzor temperature</name>
                    <type>SNMP_AGENT</type>
                    <snmp_oid>iso.3.6.1.4.1.18248.16.1.1.0</snmp_oid>
                    <key>quido.temp</key>
                    <value_type>FLOAT</value_type>
                    <units>Â° C</units>
                    <applications>
                        <application>
                            <name>Status</name>
                        </application>
                    </applications>
                    <preprocessing>
                        <step>
                            <type>MULTIPLIER</type>
                            <params>0.1</params>
                        </step>
                    </preprocessing>
                    <triggers>
                        <trigger>
                            <expression>{last(#3)}&gt;35</expression>
                            <recovery_mode>RECOVERY_EXPRESSION</recovery_mode>
                            <recovery_expression>{last(#3)}&lt;33</recovery_expression>
                            <name>Senzor temperature to hight</name>
                            <priority>HIGH</priority>
                            <manual_close>YES</manual_close>
                            <dependencies>
                                <dependency>
                                    <name>Unavailable by ICMP ping</name>
                                    <expression>{HW Quido:icmpping.max(#3)}=0</expression>
                                </dependency>
                            </dependencies>
                        </trigger>
                    </triggers>
                </item>
                <item>
                    <name>Uptime</name>
                    <type>SNMP_AGENT</type>
                    <snmp_oid>1.3.6.1.2.1.1.3.0</snmp_oid>
                    <key>quido.uptime</key>
                    <units>uptime</units>
                    <inventory_link>DEPLOYMENT_STATUS</inventory_link>
                    <applications>
                        <application>
                            <name>Status</name>
                        </application>
                    </applications>
                    <preprocessing>
                        <step>
                            <type>MULTIPLIER</type>
                            <params>0.01</params>
                        </step>
                    </preprocessing>
                    <triggers>
                        <trigger>
                            <expression>{last()}&lt;300</expression>
                            <name>Device rebooted</name>
                            <priority>INFO</priority>
                        </trigger>
                    </triggers>
                </item>
            </items>
            <discovery_rules>
                <discovery_rule>
                    <name>Inputs</name>
                    <type>SNMP_AGENT</type>
                    <snmp_oid>discovery[{#SNMPNAME},1.3.6.1.4.1.18248.16.2.1.1.2]</snmp_oid>
                    <key>quido.inputs</key>
                    <filter>
                        <conditions>
                            <condition>
                                <macro>{#SNMPNAME}</macro>
                                <value>^(\s*$)</value>
                                <operator>NOT_MATCHES_REGEX</operator>
                                <formulaid>A</formulaid>
                            </condition>
                        </conditions>
                    </filter>
                    <item_prototypes>
                        <item_prototype>
                            <name>Digital input [{#SNMPINDEX}] {#SNMPNAME}</name>
                            <type>SNMP_AGENT</type>
                            <snmp_oid>1.3.6.1.4.1.18248.16.2.1.1.1.{#SNMPINDEX}</snmp_oid>
                            <key>quido.imputs.[{#SNMPINDEX}]</key>
                            <applications>
                                <application>
                                    <name>Imputs</name>
                                </application>
                            </applications>
                            <valuemap>
                                <name>QUIDO Inputs</name>
                            </valuemap>
                            <trigger_prototypes>
                                <trigger_prototype>
                                    <expression>{last()}=0</expression>
                                    <name>{#SNMPNAME} in alert state</name>
                                    <priority>AVERAGE</priority>
                                    <manual_close>YES</manual_close>
                                </trigger_prototype>
                            </trigger_prototypes>
                        </item_prototype>
                    </item_prototypes>
                </discovery_rule>
                <discovery_rule>
                    <name>Outputs</name>
                    <type>SNMP_AGENT</type>
                    <snmp_oid>discovery[{#SNMPNAME},1.3.6.1.4.1.18248.16.3.1.1.2]</snmp_oid>
                    <key>quido.outputs</key>
                    <filter>
                        <conditions>
                            <condition>
                                <macro>{#SNMPNAME}</macro>
                                <value>^(\s*$)</value>
                                <operator>NOT_MATCHES_REGEX</operator>
                                <formulaid>A</formulaid>
                            </condition>
                        </conditions>
                    </filter>
                    <item_prototypes>
                        <item_prototype>
                            <name>Relay [{#SNMPINDEX}] {#SNMPNAME}</name>
                            <type>SNMP_AGENT</type>
                            <snmp_oid>1.3.6.1.4.1.18248.16.3.1.1.1.{#SNMPINDEX}</snmp_oid>
                            <key>quido.outputs.[{#SNMPINDEX}]</key>
                            <applications>
                                <application>
                                    <name>Outputs</name>
                                </application>
                            </applications>
                            <valuemap>
                                <name>QUIDO Outputs</name>
                            </valuemap>
                            <trigger_prototypes>
                                <trigger_prototype>
                                    <expression>{last()}=1</expression>
                                    <name>Powersupply on relay [{#SNMPINDEX}] {#SNMPNAME} is OFF</name>
                                    <priority>AVERAGE</priority>
                                </trigger_prototype>
                                <trigger_prototype>
                                    <expression>{avg(5m)}&gt;0 and {avg(5m)}&lt;1</expression>
                                    <name>Powersupply on relay [{#SNMPINDEX}] {#SNMPNAME} is RESTART</name>
                                    <priority>INFO</priority>
                                    <dependencies>
                                        <dependency>
                                            <name>Powersupply on relay [{#SNMPINDEX}] {#SNMPNAME} is OFF</name>
                                            <expression>{HW Quido:quido.outputs.[{#SNMPINDEX}].last()}=1</expression>
                                        </dependency>
                                    </dependencies>
                                </trigger_prototype>
                            </trigger_prototypes>
                        </item_prototype>
                    </item_prototypes>
                </discovery_rule>
            </discovery_rules>
        </template>
    </templates>
    <value_maps>
        <value_map>
            <name>QUIDO Inputs</name>
            <mappings>
                <mapping>
                    <value>0</value>
                    <newvalue>Alert</newvalue>
                </mapping>
                <mapping>
                    <value>1</value>
                    <newvalue>OK</newvalue>
                </mapping>
            </mappings>
        </value_map>
        <value_map>
            <name>QUIDO Outputs</name>
            <mappings>
                <mapping>
                    <value>0</value>
                    <newvalue>PowerSupply ON</newvalue>
                </mapping>
                <mapping>
                    <value>1</value>
                    <newvalue>PowerSupply OFF</newvalue>
                </mapping>
            </mappings>
        </value_map>
    </value_maps>
</zabbix_export>
