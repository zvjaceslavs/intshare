<?xml version="1.0" encoding="UTF-8"?>
<zabbix_export>
    <version>5.0</version>
    <date>2020-12-03T22:56:47Z</date>
    <groups>
        <group>
            <name>Templates/Modules</name>
        </group>
    </groups>
    <templates>
        <template>
            <template>Template Module Linux systemd by Zabbix agent 2</template>
            <name>Template Module Linux systemd by Zabbix agent 2</name>
            <groups>
                <group>
                    <name>Templates/Modules</name>
                </group>
            </groups>
            <applications>
                <application>
                    <name>Systemd</name>
                </application>
            </applications>
            <discovery_rules>
                <discovery_rule>
                    <name>Systemd services discovery</name>
                    <key>systemd.unit.discovery</key>
                    <delay>1h</delay>
                    <filter>
                        <evaltype>AND</evaltype>
                        <conditions>
                            <condition>
                                <macro>{#UNIT.LOADSTATE}</macro>
                                <value>loaded</value>
                                <formulaid>A</formulaid>
                            </condition>
                            <condition>
                                <macro>{#UNIT.NAME}</macro>
                                <value>systemd-timesyncd.service|systemd-fsck-root.service|rsync.service</value>
                                <operator>NOT_MATCHES_REGEX</operator>
                                <formulaid>B</formulaid>
                            </condition>
                            <condition>
                                <macro>{#UNIT.UNITFILESTATE}</macro>
                                <value>enabled|generated</value>
                                <formulaid>C</formulaid>
                            </condition>
                        </conditions>
                    </filter>
                    <item_prototypes>
                        <item_prototype>
                            <name>State of service: {#UNIT.NAME}</name>
                            <key>systemd.unit.info[&quot;{#UNIT.NAME}&quot;]</key>
                            <trends>0</trends>
                            <value_type>CHAR</value_type>
                            <description>Description: {#UNIT.DESCRIPTION}&#13;
Path: {#UNIT.PATH}</description>
                            <applications>
                                <application>
                                    <name>Systemd</name>
                                </application>
                            </applications>
                            <valuemap>
                                <name>Service state</name>
                            </valuemap>
                            <preprocessing>
                                <step>
                                    <type>REGEX</type>
                                    <params>^active$
1</params>
                                    <error_handler>CUSTOM_VALUE</error_handler>
                                    <error_handler_params>0</error_handler_params>
                                </step>
                            </preprocessing>
                            <trigger_prototypes>
                                <trigger_prototype>
                                    <expression>{last()}&lt;&gt;1</expression>
                                    <name>Service {#UNIT.NAME} is not running!</name>
                                    <opdata>Service current state: {ITEM.LASTVALUE}</opdata>
                                    <priority>WARNING</priority>
                                    <description>Description: {#UNIT.DESCRIPTION}&#13;
Path: {#UNIT.PATH}</description>
                                </trigger_prototype>
                            </trigger_prototypes>
                        </item_prototype>
                    </item_prototypes>
                </discovery_rule>
            </discovery_rules>
        </template>
    </templates>
    <value_maps>
        <value_map>
            <name>Service state</name>
            <mappings>
                <mapping>
                    <value>0</value>
                    <newvalue>Down</newvalue>
                </mapping>
                <mapping>
                    <value>1</value>
                    <newvalue>Up</newvalue>
                </mapping>
            </mappings>
        </value_map>
    </value_maps>
</zabbix_export>
