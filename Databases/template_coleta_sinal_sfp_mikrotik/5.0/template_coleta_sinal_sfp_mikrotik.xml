<zabbix_export>
  <version>5.0</version>
  <date>2021-10-22T08:01:39Z</date>
  <groups>
    <group>
      <name>Templates</name>
    </group>
  </groups>
  <templates>
    <template>
      <template>Sinal SFP Mikrotik</template>
      <name>Sinal SFP Mikrotik</name>
      <description>Igor Dib</description>
      <groups>
        <group>
          <name>Templates</name>
        </group>
      </groups>
      <applications>
        <application>
          <name>Network interfaces</name>
        </application>
      </applications>
      <discovery_rules>
        <discovery_rule>
          <name>Network Interfaces Discovery</name>
          <type>SNMP_AGENT</type>
          <snmp_oid>discovery[{#IFOPERSTATUS},1.3.6.1.2.1.2.2.1.8,{#IFADMINSTATUS},1.3.6.1.2.1.2.2.1.7,{#IFALIAS},1.3.6.1.2.1.31.1.1.1.18,{#IFNAME},1.3.6.1.2.1.31.1.1.1.1,{#IFDESCR},1.3.6.1.2.1.2.2.1.2,{#IFTYPE},1.3.6.1.2.1.2.2.1.3]</snmp_oid>
          <key>net.if2.discovery</key>
          <delay>1h</delay>
          <filter>
            <conditions>
              <condition>
                <macro>{#IFNAME}</macro>
                <value>@EXCLUSAO_ETHER-SINAL SFP</value>
                <formulaid>A</formulaid>
              </condition>
            </conditions>
          </filter>
          <item_prototypes>
            <item_prototype>
              <name>Interface {#IFNAME}({#IFALIAS}): RX Power</name>
              <type>SNMP_AGENT</type>
              <snmp_oid>1.3.6.1.4.1.14988.1.1.19.1.1.10.{#SNMPINDEX}</snmp_oid>
              <key>enterprises.[RXenterprises.{#SNMPINDEX}]</key>
              <delay>30s</delay>
              <value_type>FLOAT</value_type>
              <units>dBm</units>
              <preprocessing>
                <step>
                  <type>MULTIPLIER</type>
                  <params>0.001</params>
                </step>
              </preprocessing>
              <trigger_prototypes>
                <trigger_prototype>
                  <expression>{prev()}&lt;-25.</expression>
                  <recovery_mode>RECOVERY_EXPRESSION</recovery_mode>
                  <recovery_expression>{prev()}>-25.</recovery_expression>
                  <name>Interface {#IFNAME}({#IFALIAS}): Sinal RX Está acima de -25dBm</name>
                  <priority>WARNING</priority>
                </trigger_prototype>
              </trigger_prototypes>
            </item_prototype>
            <item_prototype>
              <name>Interface {#IFNAME}({#IFALIAS}): TX Power</name>
              <type>SNMP_AGENT</type>
              <snmp_oid>1.3.6.1.4.1.14988.1.1.19.1.1.9.{#SNMPINDEX}</snmp_oid>
              <key>enterprises.[TXenterprises.{#SNMPINDEX}]</key>
              <delay>30s</delay>
              <value_type>FLOAT</value_type>
              <units>dBm</units>
              <preprocessing>
                <step>
                  <type>MULTIPLIER</type>
                  <params>0.001</params>
                </step>
              </preprocessing>
              <trigger_prototypes>
                <trigger_prototype>
                  <expression>{prev()}&lt;-25</expression>
                  <recovery_mode>RECOVERY_EXPRESSION</recovery_mode>
                  <recovery_expression>{prev()}>-25</recovery_expression>
                  <name>Interface {#IFNAME}({#IFALIAS}): Sinal TX Está acima de -25dBm</name>
                  <priority>WARNING</priority>
                </trigger_prototype>
              </trigger_prototypes>
            </item_prototype>
          </item_prototypes>
          <graph_prototypes>
            <graph_prototype>
              <name>Interface {#IFNAME}({#IFALIAS}): Sinal SFP</name>
              <graph_items>
                <graph_item>
                  <color>199C0D</color>
                  <item>
                    <host>Sinal SFP Mikrotik</host>
                    <key>enterprises.[RXenterprises.{#SNMPINDEX}]</key>
                  </item>
                </graph_item>
                <graph_item>
                  <sortorder>1</sortorder>
                  <color>F63100</color>
                  <item>
                    <host>Sinal SFP Mikrotik</host>
                    <key>enterprises.[TXenterprises.{#SNMPINDEX}]</key>
                  </item>
                </graph_item>
              </graph_items>
            </graph_prototype>
          </graph_prototypes>
        </discovery_rule>
      </discovery_rules>
    </template>
  </templates>
