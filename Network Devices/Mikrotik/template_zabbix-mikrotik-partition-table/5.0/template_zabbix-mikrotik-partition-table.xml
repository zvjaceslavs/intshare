<?xml version="1.0" encoding="UTF-8"?>
<zabbix_export>
  <version>5.0</version>
  <date>2021-10-19T21:22:26Z</date>
  <groups>
    <group>
      <name>Templates/Network Devices</name>
    </group>
  </groups>
  <templates>
    <template>
      <template>Mikrotik-Partion-Table</template>
      <name>Mikrotik-Partion-Table</name>
      <groups>
        <group>
          <name>Templates/Network Devices</name>
        </group>
      </groups>
      <applications>
        <application>
          <name>Partitions</name>
        </application>
      </applications>
      <discovery_rules>
        <discovery_rule>
          <name>Mikrotik Partition Table</name>
          <type>SNMP_AGENT</type>
          <snmp_oid>discovery[{#MKTPARTITIONNAME},1.3.6.1.4.1.14988.1.1.17.1.1.2]</snmp_oid>
          <key>mktPartitionTable.discovery</key>
          <delay>6h</delay>
          <item_prototypes>
            <item_prototype>
              <name>mtxrPartitionActive.[{#MKTPARTITIONNAME}]</name>
              <type>SNMP_AGENT</type>
              <snmp_oid>1.3.6.1.4.1.14988.1.1.17.1.1.5.{#SNMPINDEX}</snmp_oid>
              <key>mtxrPartitionActive.[{#MKTPARTITIONNAME}]</key>
              <delay>1h</delay>
              <history>{$HISTORY}</history>
              <trends>{$TRENDS}</trends>
              <applications>
                <application>
                  <name>Partitions</name>
                </application>
              </applications>
              <trigger_prototypes>
                <trigger_prototype>
                  <expression>{$FIRSTPATFLAG:"{#MKTPARTITIONNAME}"} and {last(0)}=0</expression>
                  <name>Partition {#MKTPARTITIONNAME} is not active on {HOST.NAME}</name>
                  <url>http://{HOST.IP}</url>
                  <priority>AVERAGE</priority>
                  <description>Part0 is NOT ACTIVE on {HOST.NAME}! Backup partition is currently active! Please make partition part0 active and reboot device. Changes made to device may be lost.</description>
                </trigger_prototype>
              </trigger_prototypes>
            </item_prototype>
            <item_prototype>
              <name>mtxrPartitionRunning.[{#MKTPARTITIONNAME}]</name>
              <type>SNMP_AGENT</type>
              <snmp_oid>1.3.6.1.4.1.14988.1.1.17.1.1.6.{#SNMPINDEX}</snmp_oid>
              <key>mtxrPartitionRunning.[{#MKTPARTITIONNAME}]</key>
              <delay>1h</delay>
              <history>{$HISTORY}</history>
              <trends>{$TRENDS}</trends>
              <applications>
                <application>
                  <name>Partitions</name>
                </application>
              </applications>
              <trigger_prototypes>
                <trigger_prototype>
                  <expression>{$FIRSTPATFLAG:"{#MKTPARTITIONNAME}"} and {last(0)}=0</expression>
                  <name>Partition {#MKTPARTITIONNAME} is not running on {HOST.NAME}</name>
                  <url>http://{HOST.IP}</url>
                  <priority>AVERAGE</priority>
                  <description>Part0 is NOT RUNNING on {HOST.NAME}! Device currently operating off backup partition! Please make partition part0 active and reboot device. Changes made to device may be lost.</description>
                </trigger_prototype>
              </trigger_prototypes>
            </item_prototype>
            <item_prototype>
              <name>mtxrPartitionSize.[{#MKTPARTITIONNAME}]</name>
              <type>SNMP_AGENT</type>
              <snmp_oid>1.3.6.1.4.1.14988.1.1.17.1.1.3.{#SNMPINDEX}</snmp_oid>
              <key>mtxrPartitionSize.[{#MKTPARTITIONNAME}]</key>
              <delay>1h</delay>
              <history>{$HISTORY}</history>
              <trends>{$TRENDS}</trends>
              <applications>
                <application>
                  <name>Partitions</name>
                </application>
              </applications>
            </item_prototype>
            <item_prototype>
              <name>mtxrPartitionVersion.[{#MKTPARTITIONNAME}]</name>
              <type>SNMP_AGENT</type>
              <snmp_oid>1.3.6.1.4.1.14988.1.1.17.1.1.4.{#SNMPINDEX}</snmp_oid>
              <key>mtxrPartitionVersion.[{#MKTPARTITIONNAME}]</key>
              <delay>1h</delay>
              <history>{$HISTORY}</history>
              <trends>0</trends>
              <value_type>TEXT</value_type>
              <applications>
                <application>
                  <name>Partitions</name>
                </application>
              </applications>
            </item_prototype>
          </item_prototypes>
        </discovery_rule>
      </discovery_rules>
      <macros>
        <macro>
          <macro>{$FIRSTPATFLAG:part0}</macro>
          <value>1</value>
        </macro>
        <macro>
          <macro>{$FIRSTPATFLAG:part1}</macro>
          <value>0</value>
        </macro>
        <macro>
          <macro>{$FIRSTPATFLAG:part2}</macro>
          <value>0</value>
        </macro>
      </macros>
    </template>
  </templates>
</zabbix_export>