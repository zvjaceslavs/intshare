<?xml version="1.0" encoding="UTF-8"?>
<zabbix_export>
  <version>5.0</version>
  <date>2021-10-22T08:04:55Z</date>
  <groups>
    <group>
      <name>Templates/Montioring</name>
    </group>
  </groups>
  <templates>
    <template>
      <template>MikroTik</template>
      <name>MikroTik</name>
      <groups>
        <group>
          <name>Templates/Montioring</name>
        </group>
      </groups>
      <applications>
        <application>
          <name>General</name>
        </application>
        <application>
          <name>Interfaces</name>
        </application>
        <application>
          <name>Status</name>
        </application>
        <application>
          <name>System</name>
        </application>
      </applications>
      <items>
        <item>
          <name>CPU Frequency</name>
          <type>SNMP_AGENT</type>
          <snmp_oid>.1.3.6.1.4.1.14988.1.1.3.14.0</snmp_oid>
          <key>cpu.frequency</key>
          <delay>1h</delay>
          <trends>90d</trends>
          <units>Hz</units>
          <applications>
            <application>
              <name>System</name>
            </application>
          </applications>
          <preprocessing>
            <step>
              <type>MULTIPLIER</type>
              <params>1000000</params>
            </step>
          </preprocessing>
        </item>
        <item>
          <name>Disk Space Total</name>
          <type>SNMP_AGENT</type>
          <snmp_oid>.1.3.6.1.2.1.25.2.3.1.5.131073</snmp_oid>
          <key>disk.space.total</key>
          <trends>90d</trends>
          <units>B</units>
          <applications>
            <application>
              <name>System</name>
            </application>
          </applications>
          <preprocessing>
            <step>
              <type>MULTIPLIER</type>
              <params>1024</params>
            </step>
          </preprocessing>
        </item>
        <item>
          <name>Disk Space Used</name>
          <type>SNMP_AGENT</type>
          <snmp_oid>.1.3.6.1.2.1.25.2.3.1.6.131073</snmp_oid>
          <key>disk.space.used</key>
          <trends>90d</trends>
          <units>B</units>
          <applications>
            <application>
              <name>System</name>
            </application>
          </applications>
          <preprocessing>
            <step>
              <type>MULTIPLIER</type>
              <params>1024</params>
            </step>
          </preprocessing>
        </item>
        <item>
          <name>Disk Space Utilisation</name>
          <type>CALCULATED</type>
          <key>disk.space.utilisation</key>
          <trends>90d</trends>
          <units>%</units>
          <params>last("disk.space.used")/last("disk.space.total")*100</params>
          <applications>
            <application>
              <name>System</name>
            </application>
          </applications>
          <triggers>
            <trigger>
              <expression>{min(5m)}>95</expression>
              <name>High Disk Space</name>
              <priority>AVERAGE</priority>
            </trigger>
          </triggers>
        </item>
        <item>
          <name>Firmware</name>
          <type>SNMP_AGENT</type>
          <snmp_oid>.1.3.6.1.4.1.14988.1.1.4.4.0</snmp_oid>
          <key>firmware</key>
          <delay>1h</delay>
          <trends>0</trends>
          <value_type>CHAR</value_type>
          <applications>
            <application>
              <name>System</name>
            </application>
          </applications>
          <triggers>
            <trigger>
              <expression>{regexp(6.48)}=0</expression>
              <name>Firmware Update Required</name>
              <priority>INFO</priority>
            </trigger>
          </triggers>
        </item>
        <item>
          <name>ICMP Ping</name>
          <type>SIMPLE</type>
          <key>icmpping</key>
          <trends>90d</trends>
          <applications>
            <application>
              <name>Status</name>
            </application>
          </applications>
          <triggers>
            <trigger>
              <expression>{max(#3)}=0</expression>
              <name>ICMP Unavailable</name>
              <priority>HIGH</priority>
              <description>Last three attempts returned timeout. Please check device connectivity.</description>
            </trigger>
          </triggers>
        </item>
        <item>
          <name>ICMP Packet Loss</name>
          <type>SIMPLE</type>
          <key>icmppingloss</key>
          <trends>90d</trends>
          <value_type>FLOAT</value_type>
          <units>%</units>
          <applications>
            <application>
              <name>Status</name>
            </application>
          </applications>
          <triggers>
            <trigger>
              <expression>{min(5m)}>5</expression>
              <name>ICMP Packet Loss</name>
              <priority>AVERAGE</priority>
              <dependencies>
                <dependency>
                  <name>ICMP Unavailable</name>
                  <expression>{MikroTik:icmpping.max(#3)}=0</expression>
                </dependency>
              </dependencies>
            </trigger>
          </triggers>
        </item>
        <item>
          <name>ICMP Latency</name>
          <type>SIMPLE</type>
          <key>icmppingsec</key>
          <trends>90d</trends>
          <value_type>FLOAT</value_type>
          <units>s</units>
          <applications>
            <application>
              <name>Status</name>
            </application>
          </applications>
          <triggers>
            <trigger>
              <expression>{avg(60m)}>0.1</expression>
              <name>ICMP High Latency</name>
              <priority>WARNING</priority>
              <dependencies>
                <dependency>
                  <name>ICMP Packet Loss</name>
                  <expression>{MikroTik:icmppingloss.min(5m)}>5</expression>
                </dependency>
                <dependency>
                  <name>ICMP Unavailable</name>
                  <expression>{MikroTik:icmpping.max(#3)}=0</expression>
                </dependency>
              </dependencies>
            </trigger>
          </triggers>
        </item>
        <item>
          <name>Identity</name>
          <type>SNMP_AGENT</type>
          <snmp_oid>.1.3.6.1.2.1.1.5.0</snmp_oid>
          <key>identity</key>
          <delay>1h</delay>
          <trends>0</trends>
          <value_type>CHAR</value_type>
          <applications>
            <application>
              <name>General</name>
            </application>
          </applications>
        </item>
        <item>
          <name>Memory Total</name>
          <type>SNMP_AGENT</type>
          <snmp_oid>.1.3.6.1.2.1.25.2.3.1.5.65536</snmp_oid>
          <key>memory.total</key>
          <trends>90d</trends>
          <units>B</units>
          <applications>
            <application>
              <name>System</name>
            </application>
          </applications>
          <preprocessing>
            <step>
              <type>MULTIPLIER</type>
              <params>1024</params>
            </step>
          </preprocessing>
        </item>
        <item>
          <name>Memory Used</name>
          <type>SNMP_AGENT</type>
          <snmp_oid>.1.3.6.1.2.1.25.2.3.1.6.65536</snmp_oid>
          <key>memory.used</key>
          <trends>90d</trends>
          <units>B</units>
          <applications>
            <application>
              <name>System</name>
            </application>
          </applications>
          <preprocessing>
            <step>
              <type>MULTIPLIER</type>
              <params>1024</params>
            </step>
          </preprocessing>
        </item>
        <item>
          <name>Memory Utilisation</name>
          <type>CALCULATED</type>
          <key>memory.utilisation</key>
          <trends>90d</trends>
          <units>%</units>
          <params>last("memory.used")/last("memory.total")*100</params>
          <applications>
            <application>
              <name>System</name>
            </application>
          </applications>
          <triggers>
            <trigger>
              <expression>{min(5m)}>90</expression>
              <name>High Memory</name>
              <priority>AVERAGE</priority>
            </trigger>
          </triggers>
        </item>
        <item>
          <name>Model</name>
          <type>SNMP_AGENT</type>
          <snmp_oid>1.3.6.1.2.1.1.1.0</snmp_oid>
          <key>model</key>
          <delay>1d</delay>
          <trends>0</trends>
          <value_type>CHAR</value_type>
          <applications>
            <application>
              <name>General</name>
            </application>
          </applications>
        </item>
        <item>
          <name>Temperature</name>
          <type>SNMP_AGENT</type>
          <snmp_oid>1.3.6.1.4.1.14988.1.1.3.10.0</snmp_oid>
          <key>temperature</key>
          <delay>5m</delay>
          <trends>90d</trends>
          <units>Â°C</units>
          <applications>
            <application>
              <name>System</name>
            </application>
          </applications>
          <preprocessing>
            <step>
              <type>MULTIPLIER</type>
              <params>0.1</params>
            </step>
          </preprocessing>
          <triggers>
            <trigger>
              <expression>{min(5m)}>70</expression>
              <name>High Temperature</name>
              <status>DISABLED</status>
              <priority>WARNING</priority>
            </trigger>
          </triggers>
        </item>
        <item>
          <name>Uptime</name>
          <type>SNMP_AGENT</type>
          <snmp_oid>.1.3.6.1.2.1.1.3.0</snmp_oid>
          <key>uptime</key>
          <trends>90d</trends>
          <units>uptime</units>
          <applications>
            <application>
              <name>System</name>
            </application>
          </applications>
          <preprocessing>
            <step>
              <type>MULTIPLIER</type>
              <params>0.01</params>
            </step>
          </preprocessing>
          <triggers>
            <trigger>
              <expression>{last()}&lt;10m</expression>
              <name>Device Restarted (uptime &lt; 10m)</name>
              <priority>WARNING</priority>
            </trigger>
          </triggers>
        </item>
        <item>
          <name>Voltage</name>
          <type>SNMP_AGENT</type>
          <snmp_oid>.1.3.6.1.4.1.14988.1.1.3.8.0</snmp_oid>
          <key>voltage</key>
          <delay>5m</delay>
          <trends>90d</trends>
          <units>V</units>
          <applications>
            <application>
              <name>System</name>
            </application>
          </applications>
          <preprocessing>
            <step>
              <type>MULTIPLIER</type>
              <params>0.1</params>
            </step>
          </preprocessing>
        </item>
        <item>
          <name>SNMP Availability</name>
          <type>INTERNAL</type>
          <key>zabbix[host,snmp,available]</key>
          <delay>5m</delay>
          <trends>90d</trends>
          <applications>
            <application>
              <name>System</name>
            </application>
          </applications>
          <triggers>
            <trigger>
              <expression>{max(5m)}=0</expression>
              <name>No SNMP Data Collection</name>
              <priority>INFO</priority>
              <dependencies>
                <dependency>
                  <name>ICMP Unavailable</name>
                  <expression>{MikroTik:icmpping.max(#3)}=0</expression>
                </dependency>
              </dependencies>
            </trigger>
          </triggers>
        </item>
      </items>
      <discovery_rules>
        <discovery_rule>
          <name>CPU</name>
          <type>SNMP_AGENT</type>
          <snmp_oid>discovery[{#SNMPVALUE},1.3.6.1.2.1.25.3.3.1.1]</snmp_oid>
          <key>cpu</key>
          <delay>1h</delay>
          <lifetime>1d</lifetime>
          <item_prototypes>
            <item_prototype>
              <name>CPU {#SNMPINDEX}</name>
              <type>SNMP_AGENT</type>
              <snmp_oid>.1.3.6.1.2.1.25.3.3.1.2.{#SNMPINDEX}</snmp_oid>
              <key>cpu.[{#SNMPINDEX}]</key>
              <trends>90d</trends>
              <units>%</units>
              <applications>
                <application>
                  <name>System</name>
                </application>
              </applications>
              <trigger_prototypes>
                <trigger_prototype>
                  <expression>{prev()}>90</expression>
                  <name>High CPU</name>
                  <priority>WARNING</priority>
                </trigger_prototype>
              </trigger_prototypes>
            </item_prototype>
          </item_prototypes>
        </discovery_rule>
        <discovery_rule>
          <name>Interfaces</name>
          <type>SNMP_AGENT</type>
          <snmp_oid>discovery[{#SNMPVALUE},.1.3.6.1.2.1.2.2.1.2]</snmp_oid>
          <key>interfaces</key>
          <delay>1h</delay>
          <lifetime>1d</lifetime>
          <item_prototypes>
            <item_prototype>
              <name>{#SNMPVALUE} In</name>
              <type>SNMP_AGENT</type>
              <snmp_oid>.1.3.6.1.2.1.31.1.1.1.6.{#SNMPINDEX}</snmp_oid>
              <key>interface.in.[{#SNMPINDEX}]</key>
              <trends>90d</trends>
              <units>bps</units>
              <applications>
                <application>
                  <name>Interfaces</name>
                </application>
              </applications>
              <preprocessing>
                <step>
                  <type>CHANGE_PER_SECOND</type>
                  <params></params>
                </step>
                <step>
                  <type>MULTIPLIER</type>
                  <params>8</params>
                </step>
              </preprocessing>
            </item_prototype>
            <item_prototype>
              <name>{#SNMPVALUE} Out</name>
              <type>SNMP_AGENT</type>
              <snmp_oid>.1.3.6.1.2.1.31.1.1.1.10.{#SNMPINDEX}</snmp_oid>
              <key>interface.out.[{#SNMPINDEX}]</key>
              <trends>90d</trends>
              <units>bps</units>
              <applications>
                <application>
                  <name>Interfaces</name>
                </application>
              </applications>
              <preprocessing>
                <step>
                  <type>CHANGE_PER_SECOND</type>
                  <params></params>
                </step>
                <step>
                  <type>MULTIPLIER</type>
                  <params>8</params>
                </step>
              </preprocessing>
            </item_prototype>
          </item_prototypes>
          <graph_prototypes>
            <graph_prototype>
              <name>Traffic on {#SNMPVALUE}</name>
              <graph_items>
                <graph_item>
                  <sortorder>1</sortorder>
                  <drawtype>GRADIENT_LINE</drawtype>
                  <color>00AA00</color>
                  <item>
                    <host>MikroTik</host>
                    <key>interface.in.[{#SNMPINDEX}]</key>
                  </item>
                </graph_item>
                <graph_item>
                  <sortorder>2</sortorder>
                  <drawtype>GRADIENT_LINE</drawtype>
                  <color>3333FF</color>
                  <item>
                    <host>MikroTik</host>
                    <key>interface.out.[{#SNMPINDEX}]</key>
                  </item>
                </graph_item>
              </graph_items>
            </graph_prototype>
          </graph_prototypes>
        </discovery_rule>
      </discovery_rules>
    </template>
  </templates>
</zabbix_export>