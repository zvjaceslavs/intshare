<?xml version="1.0" encoding="UTF-8"?>
<zabbix_export>
  <version>5.0</version>
  <date>2021-10-22T07:59:05Z</date>
  <groups>
    <group>
      <name>Templates</name>
    </group>
  </groups>
  <templates>
    <template>
      <template>Template RouterOS BGP</template>
      <name>Template RouterOS BGP</name>
      <groups>
        <group>
          <name>Templates</name>
        </group>
      </groups>
      <discovery_rules>
        <discovery_rule>
          <name>BGP peer names</name>
          <type>EXTERNAL</type>
          <key>bgp_peer_names.sh["{HOST.CONN}","{$ROUTEROS_USERNAME}","{$ROUTEROS_PASSWORD}"]</key>
          <delay>10</delay>
          <item_prototypes>
            <item_prototype>
              <name>BGP peer {#BGP_PEER_NAME} state</name>
              <type>EXTERNAL</type>
              <key>bgp_peer_field.sh["{HOST.CONN}", "{$ROUTEROS_USERNAME}", "{$ROUTEROS_PASSWORD}", {#BGP_PEER_NAME}, "state"]</key>
              <delay>5</delay>
              <valuemap>
                <name>RouterOS BGP value mapping</name>
              </valuemap>
              <trigger_prototypes>
                <trigger_prototype>
                  <expression>{last(#5)}&lt;4 and {last(#5)}>0</expression>
                  <name>BGP peer {#BGP_PEER_NAME} state is not established</name>
                  <priority>WARNING</priority>
                </trigger_prototype>
              </trigger_prototypes>
            </item_prototype>
            <item_prototype>
              <name>BGP peer {#BGP_PEER_NAME} uptime</name>
              <type>EXTERNAL</type>
              <key>bgp_peer_field.sh["{HOST.CONN}", "{$ROUTEROS_USERNAME}", "{$ROUTEROS_PASSWORD}", {#BGP_PEER_NAME}, "uptime"]</key>
              <delay>5</delay>
            </item_prototype>
          </item_prototypes>
        </discovery_rule>
      </discovery_rules>
      <macros>
        <macro>
          <macro>{$ROUTEROS_PASSWORD}</macro>
          <value>zabbix_discovery</value>
        </macro>
        <macro>
          <macro>{$ROUTEROS_USERNAME}</macro>
          <value>zabbix</value>
        </macro>
      </macros>
    </template>
  </templates>
  <value_maps>
    <value_map>
      <name>RouterOS BGP value mapping</name>
      <mappings>
        <mapping>
          <value>0</value>
          <newvalue>disabled</newvalue>
        </mapping>
        <mapping>
          <value>1</value>
          <newvalue>idle</newvalue>
        </mapping>
        <mapping>
          <value>2</value>
          <newvalue>openconfirm - opensent</newvalue>
        </mapping>
        <mapping>
          <value>3</value>
          <newvalue>active</newvalue>
        </mapping>
        <mapping>
          <value>4</value>
          <newvalue>established</newvalue>
        </mapping>
      </mappings>
    </value_map>
  </value_maps>
</zabbix_export>