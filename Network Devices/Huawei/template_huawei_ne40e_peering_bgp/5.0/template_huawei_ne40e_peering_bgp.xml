<?xml version="1.0" encoding="UTF-8"?>
<zabbix_export>
  <version>5.0</version>
  <date>2021-10-19T20:40:43Z</date>
  <groups>
    <group>
      <name>CORE</name>
    </group>
  </groups>
  <templates>
    <template>
      <template>Huawei NE40E - BGP</template>
      <name>Huawei NE40E - BGP</name>
      <description>Template para monitoramento de sessão BGP</description>
      <groups>
        <group>
          <name>CORE</name>
        </group>
      </groups>
      <applications>
        <application>
          <name>Peer-BGP</name>
        </application>
      </applications>
      <discovery_rules>
        <discovery_rule>
          <name>Huawei BGP Peering</name>
          <type>SNMP_AGENT</type>
          <snmp_oid>discovery[{#PEERADDR},1.3.6.1.2.1.15.3.1.7,{#PEERASN},1.3.6.1.2.1.15.3.1.9,{#PEERSTATE},1.3.6.1.2.1.15.3.1.2]</snmp_oid>
          <key>snmp.peering.discovery</key>
          <delay>5m</delay>
          <description>Regra que descobre informações de Peering BGP</description>
          <item_prototypes>
            <item_prototype>
              <name>Peer: {#PEERADDR}-AS{#PEERASN}</name>
              <type>SNMP_AGENT</type>
              <snmp_oid>1.3.6.1.2.1.15.3.1.2.{#PEERADDR}</snmp_oid>
              <key>snmp.bgp.rem.addr.[{#PEERADDR}]</key>
              <delay>30s</delay>
              <description>Item que busca o estado da sessão bgp de cada peer. O estado varia de 1 a 6</description>
              <applications>
                <application>
                  <name>Peer-BGP</name>
                </application>
              </applications>
              <trigger_prototypes>
                <trigger_prototype>
                  <expression>{last()}&lt;>6</expression>
                  <recovery_mode>RECOVERY_EXPRESSION</recovery_mode>
                  <recovery_expression>{last()}=6</recovery_expression>
                  <name>Peer: {#PEERADDR}-AS{#PEERASN} - Down</name>
                  <priority>HIGH</priority>
                  <description>Trigger que informa queda na sessão bgp. Caso o stado for diferente de 6, então o peer está down.</description>
                </trigger_prototype>
              </trigger_prototypes>
            </item_prototype>
          </item_prototypes>
        </discovery_rule>
      </discovery_rules>
    </template>
  </templates>
</zabbix_export>